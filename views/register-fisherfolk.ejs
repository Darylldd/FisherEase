    <!-- Fisherfolk Registration Form -->
    <div class="main-container">
        <div class="form-section">
            <h2><i class="fas fa-fish"></i> Fisherfolk Registration</h2>
            <div class="mb-3">
                <a href="/aquaculture/register" class="btn btn-aquaculture"><i class="fas fa-water me-2"></i> Aquaculture Facility Registration</a>
            </div>
            <form action="/register/fisherfolk" method="POST">
             <div class="mb-3">
                    <label class="form-label">ID or License Number</label>
                    <input type="text" class="form-control" name="license_number" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Date Registered</label>
                    <input type="date" class="form-control" name="date_registered" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" name="first_name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Middle Name (Optional)</label>
                    <input type="text" class="form-control" name="middle_name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="last_name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" name="address" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Contact Info (Phone/Email)</label>
                    <input type="text" class="form-control" name="contact_info" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Fishing Methods Used</label>
                    <input type="text" class="form-control" name="fishing_methods" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Fishing Zone / Area</label>
                    <input type="text" class="form-control" name="fishing_zone" required>
                </div>
              
                <div class="mb-3">
                    <label class="form-label">Civil Status</label>
                    <select class="form-select" name="civil_status" required>
                        <option value="" disabled selected>Select Civil Status</option>
                        <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Widowed">Widowed</option>
                        <option value="Divorced">Divorced</option>
                    </select>
                </div>
               
                <button type="submit" class="btn btn-success">Register</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
  document.addEventListener("DOMContentLoaded", function() {
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");

    sidebarToggle.addEventListener("click", function() {
      sidebar.classList.toggle("active");
    });

    // Optional: Close sidebar when clicking outside (on mobile/tablet)
    document.addEventListener("click", function(e) {
      if (window.innerWidth <= 991 && 
          !sidebar.contains(e.target) && 
          !sidebarToggle.contains(e.target)) {
        sidebar.classList.remove("active");
      }
    });
  });
</script>

