<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Best Time for Catch Predictions - Fisheries Management</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    :root {
      --primary: #1e3a8a; /* Deep navy */
      --accent: #3b82f6; /* Vibrant blue */
      --background: #f0f4ff; /* Light blue-gray */
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981; /* Green for success */
      --warning: #ef4444; /* Red for alerts */
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    /* Navbar (reused from User Dashboard) */
    .navbar {
      background-color: var(--primary);
      padding: 1rem 1.5rem;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .navbar-brand {
      font-weight: 600;
      font-size: 1.5rem;
      color: #ffffff !important;
      letter-spacing: 0.5px;
    }
    .nav-link {
      color: #ffffff !important;
      font-weight: 400;
      font-size: 0.95rem;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .nav-link:hover {
      background-color: var(--accent);
      transform: translateY(-1px);
    }
    .dropdown-menu {
      background-color: var(--card-bg);
      border: none;
      border-radius: 8px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      margin-top: 0.75rem;
      padding: 0.5rem 0;
    }
    .dropdown-item {
      color: var(--text);
      font-weight: 400;
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      margin: 0 0.5rem;
    }
    .dropdown-item:hover {
      background-color: var(--background);
      color: var(--accent);
    }
    .dropdown-item i {
      width: 24px;
      text-align: center;
    }
    .navbar-nav .nav-item {
      margin-left: 0.5rem;
    }

    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    /* Card Styling */
    .card {
      background-color: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    .card-header {
      background-color: var(--primary);
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
      padding: 1rem;
    }
    .card-header h2 {
      font-size: 1.8rem;
      font-weight: 600;
      color: #ffffff;
      margin: 0;
    }
    .card-body {
      padding: 1.5rem;
    }

    /* Table Styling */
    .table {
      margin-bottom: 0;
    }
    .table thead {
      background-color: var(--primary);
      color: #ffffff;
      position: sticky;
      top: 0;
      z-index: 10;
    }
    .table thead th {
      font-weight: 500;
      font-size: 0.95rem;
      padding: 0.75rem 1rem;
      border: none;
    }
    .table tbody tr {
      transition: background-color 0.3s ease;
    }
    .table tbody tr:hover {
      background-color: rgba(59, 130, 246, 0.05);
    }
    .table tbody td {
      font-size: 0.9rem;
      padding: 0.75rem 1rem;
      border-color: var(--border);
    }

    /* Chart Container */
    .chart-container {
      position: relative;
      height: 300px; /* Reduced height for better viewport fit */
      margin: 1rem 0;
    }
    .chart-container h5 {
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--text);
      margin-bottom: 0.75rem;
    }
    canvas {
      width: 100% !important;
      height: 100% !important;
    }

    /* Pagination Styling */
    .pagination .page-link {
      color: var(--primary);
      border-radius: 6px;
      margin: 0 0.2rem;
      font-size: 0.9rem;
      padding: 0.5rem 1rem;
    }
    .pagination .page-link:hover {
      background-color: var(--accent);
      color: #ffffff;
    }
    .pagination .page-item.disabled .page-link {
      background-color: var(--border);
      color: #6b7280;
      cursor: not-allowed;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .main-container {
        padding: 0 1rem;
      }
      .chart-container {
        height: 280px;
      }
    }
    @media (max-width: 768px) {
      .section-header {
        font-size: 1.2rem;
      }
      .card-body {
        padding: 1rem;
      }
      .card-header h2 {
        font-size: 1.6rem;
      }
      .table thead th,
      .table tbody td {
        font-size: 0.85rem;
        padding: 0.5rem;
      }
      .chart-container {
        height: 260px;
      }
      .pagination .page-link {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
      }
    }
    @media (max-width: 576px) {
      .main-container {
        margin: 1rem auto;
      }
      .section-header {
        font-size: 1.1rem;
      }
      .card-body {
        padding: 0.75rem;
      }
      .card-header h2 {
        font-size: 1.4rem;
      }
      .table {
        font-size: 0.8rem;
      }
      .table thead th,
      .table tbody td {
        padding: 0.4rem;
      }
      .chart-container {
        height: 220px;
      }
      .pagination .page-link {
        padding: 0.3rem 0.6rem;
        font-size: 0.8rem;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar (reused from User Dashboard) -->
  <nav class="navbar navbar-expand-lg">
    <div class="main-container">
      <a class="navbar-brand" href="/">Fisheries Management Office</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item">
            <a class="nav-link" href="/"><i class="fas fa-tachometer-alt me-1"></i> Dashboard</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReports" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-tools me-1"></i> User Tools
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownReports">
              <li><a class="dropdown-item" href="/climateLoss/view"><i class="fas fa-cloud-sun me-2"></i> Post-Climate Event Loss Reporting</a></li>
              <li><a class="dropdown-item" href="/catch-report/predictions"><i class="fas fa-clock me-2"></i> Predict Best Catch Time</a></li>
              <li><a class="dropdown-item" href="/catch-report"><i class="fas fa-fish me-2"></i> Report Daily Catch</a></li>
              <li><a class="dropdown-item" href="/fishing-activity-tracking"><i class="fas fa-anchor me-2"></i> Log Fishing Activity</a></li>
              <li><a class="dropdown-item" href="/harvest/user-view"><i class="fas fa-chart-line me-2"></i> Harvest</a></li>
              <li><a class="dropdown-item" href="/harvest/add"><i class="fas fa-plus me-2"></i> Add Harvest</a></li>
              <li><a class="dropdown-item" href="/violation-history"><i class="fas fa-exclamation-triangle me-2"></i> My Violations</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><i class="fas fa-user me-1"></i> Welcome, <%= user.name %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Logout Confirmation Modal (reused from User Dashboard) -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to log out?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <div class="main-container">
    <!-- Best Time for Catch Predictions Section -->
    <div class="section-header">
      <i class="fas fa-clock"></i> Best Time for Catch Predictions
    </div>
    <div class="card">
      <div class="card-header">
        <h2>Best Time for Catch Predictions</h2>
      </div>
      <div class="card-body">
        <% if (predictions.length > 0) { %>
          <!-- Chart Section -->
          <div class="row">
            <div class="col-md-6">
              <div class="chart-container">
                <h5>Confidence Level by Species</h5>
                <canvas id="quantityChart"></canvas>
              </div>
            </div>
            <div class="col-md-6">
              <div class="chart-container">
                <h5>Predicted Best Time Over Date</h5>
                <canvas id="confidenceChart"></canvas>
              </div>
            </div>
          </div>

          <!-- Table Section -->
          <div class="table-responsive" id="predictionTableContainer">
            <table class="table table-bordered" id="predictionTable">
              <thead>
                <tr>
                  <th>Species</th>
                  <th>Predicted Best Time</th>
                  <th>Quantity</th>
                  <th>Confidence</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% predictions.forEach(prediction => { %>
                  <tr>
                    <td><%= prediction.species %></td>
                    <td><%= new Date(prediction.predicted_best_time).toLocaleDateString('en-PH', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                    <td><%= prediction.predicted_quantity %></td>
                    <td><%= (prediction.confidence * 100).toFixed(2) %>%</td>
                    <td>
                      <%= new Date(prediction.date).toLocaleString('en-PH', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: 'numeric',
                        minute: '2-digit',
                        hour12: true
                      }) %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>

            <!-- Pagination Controls -->
            <nav class="mt-3 d-flex justify-content-end">
              <ul class="pagination" id="paginationControls">
                <li class="page-item" id="prevPage">
                  <button class="page-link"><i class="fas fa-chevron-left"></i> Previous</button>
                </li>
                <li class="page-item" id="nextPage">
                  <button class="page-link">Next <i class="fas fa-chevron-right"></i></button>
                </li>
              </ul>
            </nav>
          </div>
        <% } else { %>
          <p class="text-center text-danger">No predictions available.</p>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Chart.js logic...
      let species = <%- JSON.stringify(predictions.map(p => p.species)) %>;
      let confidenceLevels = <%- JSON.stringify(predictions.map(p => p.confidence * 100)) %>;
      let dates = <%- JSON.stringify(predictions.map(p => p.date)) %>;
      let bestTimes = <%- JSON.stringify(predictions.map(p => p.predicted_best_time)) %>;

      function convertTimeToHours(timeStr) {
        let match = timeStr.match(/(\d+):(\d+) (\w{2})/);
        if (!match) return null;
        let hours = parseInt(match[1]);
        let minutes = parseInt(match[2]);
        let period = match[3];
        if (period === "PM" && hours !== 12) hours += 12;
        if (period === "AM" && hours === 12) hours = 0;
        return hours + (minutes / 60);
      }

      let bestTimeNumeric = bestTimes.map(time => convertTimeToHours(time));

      window.quantityChartInstance = window.quantityChartInstance || null;
      window.confidenceChartInstance = window.confidenceChartInstance || null;

      if (window.quantityChartInstance) window.quantityChartInstance.destroy();
      if (window.confidenceChartInstance) window.confidenceChartInstance.destroy();

      window.quantityChartInstance = new Chart(document.getElementById("quantityChart"), {
        type: "bar",
        data: {
          labels: species,
          datasets: [{
            label: "Confidence Level (%)",
            data: confidenceLevels,
            backgroundColor: "rgba(59, 130, 246, 0.7)",
            borderColor: "rgba(59, 130, 246, 1)",
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true,
              max: 100,
              title: {
                display: true,
                text: "Confidence Level (%)",
                font: { family: 'Poppins', size: 12 }
              }
            },
            x: {
              title: {
                display: true,
                text: "Species",
                font: { family: 'Poppins', size: 12 }
              }
            }
          },
          plugins: {
            legend: {
              labels: {
                font: { family: 'Poppins', size: 12 }
              }
            }
          }
        }
      });

      window.confidenceChartInstance = new Chart(document.getElementById("confidenceChart"), {
        type: "line",
        data: {
          labels: dates,
          datasets: [{
            label: "Predicted Best Time (Hours)",
            data: bestTimeNumeric,
            fill: false,
            borderColor: "rgba(16, 185, 129, 1)",
            backgroundColor: "rgba(16, 185, 129, 0.7)",
            tension: 0.1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              title: {
                display: true,
                text: "Time of Day (Hours)",
                font: { family: 'Poppins', size: 12 }
              },
              min: 0,
              max: 24
            },
            x: {
              title: {
                display: true,
                text: "Date",
                font: { family: 'Poppins', size: 12 }
              }
            }
          },
          plugins: {
            legend: {
              labels: {
                font: { family: 'Poppins', size: 12 }
              }
            }
          }
        }
      });

      // Pagination logic
      const table = document.getElementById("predictionTable");
      const tbody = table.querySelector("tbody");
      const rows = Array.from(tbody.querySelectorAll("tr"));
      const prevPageBtn = document.getElementById("prevPage");
      const nextPageBtn = document.getElementById("nextPage");
      const rowsPerPage = 5;
      let currentPage = 1;

      function displayPage(page) {
        const start = (page - 1) * rowsPerPage;
        const end = start + rowsPerPage;

        rows.forEach((row, index) => {
          row.style.display = (index >= start && index < end) ? "" : "none";
        });

        renderPagination(rows.length, page);
      }

      function renderPagination(totalRows, currentPage) {
        const pageCount = Math.ceil(totalRows / rowsPerPage);
        prevPageBtn.classList.toggle("disabled", currentPage === 1);
        nextPageBtn.classList.toggle("disabled", currentPage === pageCount || totalRows === 0);
      }

      function updatePage(direction) {
        const pageCount = Math.ceil(rows.length / rowsPerPage);
        if (direction === "prev" && currentPage > 1) {
          currentPage--;
        } else if (direction === "next" && currentPage < pageCount) {
          currentPage++;
        }
        displayPage(currentPage);
      }

      prevPageBtn.addEventListener("click", () => updatePage("prev"));
      nextPageBtn.addEventListener("click", () => updatePage("next"));

      if (rows.length > rowsPerPage) {
        displayPage(currentPage);
      }
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>