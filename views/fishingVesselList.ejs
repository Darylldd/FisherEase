  <div class="main-container">
    <div class="section-header">
      <i class="fas fa-ship"></i> Registered Fishing Vessels
    </div>
    <div class="card">
      <div class="card-body">
        <form class="row g-3 mb-4" method="get" action="">
          <div class="col-md-2">
            <select name="month" class="form-select">
              <option value="">All Months</option>
              <% for (let m = 1; m <= 12; m++) { %>
                <option value="<%= m %>" <%= filters.month == m.toString() ? 'selected' : '' %>>
                  <%= new Date(0, m - 1).toLocaleString('default', { month: 'long' }) %>
                </option>
              <% } %>
            </select>
          </div>
          <div class="col-md-2">
            <select name="year" class="form-select">
              <option value="">All Years</option>
              <% const currentYear = new Date().getFullYear();
                 for (let y = currentYear; y >= currentYear - 10; y--) { %>
                <option value="<%= y %>" <%= filters.year == y.toString() ? 'selected' : '' %>><%= y %></option>
              <% } %>
            </select>
          </div>
          <div class="col-md-4">
            <a class="btn btn-outline-success me-2" target="_blank"
               href="/fishing-vessel-registrations/export/excel?<%= `month=${filters.month || ''}&year=${filters.year || ''}` %>">
              <i class="fas fa-file-excel me-1"></i> Export to Excel
            </a>
            <a class="btn btn-outline-danger" target="_blank"
               href="/fishing-vessel-registrations/export/pdf?<%= `month=${filters.month || ''}&year=${filters.year || ''}` %>">
              <i class="fas fa-file-pdf me-1"></i> Export to PDF
            </a>
          </div>
        </form>
        <div class="table-responsive">
          <table class="table table-hover" id="vesselTable">
            <thead>
              <tr>
                <th>Vessel Name</th>
                <th>Type</th>
                <th>Owner</th>
                <th>Homeport</th>
                <th>Year Built</th>
                <th>Builder</th>
                <th>Submitted</th>
              </tr>
            </thead>
            <tbody id="vesselTableBody">
              <% if (registrations.length) { %>
                <% registrations.forEach(function(r, index) { %>
                  <tr data-page="<%= Math.floor(index / 10) + 1 %>">
                    <td><%= r.fishing_vessel_name || '-' %></td>
                    <td><%= r.vessel_type || '-' %></td>
                    <td><%= r.fisherfolk_name || 'Unknown' %></td>
                    <td><%= r.homeport || 'Calapan City' %></td>
                    <td><%= r.year_built || '-' %></td>
                    <td><%= r.boat_builder_name || '-' %></td>
                    <td><%= new Date(r.created_at).toLocaleDateString('en-PH', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center text-muted">No registered vessels found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <nav aria-label="Vessel table pagination">
          <ul class="pagination">
            <li class="page-item" id="prevPage">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo; Previous</span>
              </a>
            </li>
            <!-- Page numbers will be dynamically inserted here -->
            <li class="page-item" id="nextPage">
              <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">Next &raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
