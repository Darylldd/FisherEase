  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    :root {
      --primary: #1e3a8a; /* Deep navy */
      --accent: #3b82f6; /* Vibrant blue */
      --background: #f0f4ff; /* Light blue-gray */
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981; /* Green for success */
      --warning: #ef4444; /* Red for alerts */
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

     /* Navbar */
.navbar {
  background-color: var(--primary);
  padding: 1rem 1.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.navbar-brand {
  font-weight: 600;
  font-size: 1.5rem;
  color: #fff !important;
}
.navbar .nav-link {
  color: #fff !important;
}

/* Sidebar */
.sidebar {
  position: fixed;
  top: 0px;
  left: 0;
  width: 250px;
  height: 100%;
  background-color: var(--card-bg);
  padding-top: 1rem;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.sidebar-logo img {
  max-width: 100%;
  height: auto;
}
.sidebar-logo {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

.sidebar .nav-link {
  color: var(--text);
  padding: 0.75rem 1rem;
}
.sidebar .sub-item {
  padding-left: 2.5rem;
  font-size: 0.9rem;
}

/* Default visible on desktop */
body {
  margin-left: 250px;
}

/* Hide sidebar on mobile */
@media (max-width: 991px) {
  .sidebar {
    transform: translateX(-100%);
  }
  body {
    margin-left: 0;
  }
  .sidebar.active {
    transform: translateX(0);
    z-index: 1050;
  }
}

    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    /* Card Styling */
    .card {
      background-color: var(--card-bg);
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    .card-header {
      background-color: var(--primary);
      color: #ffffff;
      font-weight: 500;
      font-size: 1.25rem;
      padding: 1rem 1.5rem;
      border-radius: 12px 12px 0 0;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .card-body {
      padding: 2rem;
    }

    /* Table Styling */
    .table {
      font-size: 0.95rem;
      margin-bottom: 0;
    }
    .table thead {
      background-color: var(--primary);
      color: #ffffff;
    }
    .table th {
      font-weight: 500;
      padding: 1rem;
      text-align: left;
      border: none;
      white-space: nowrap;
    }
    .table td {
      padding: 1rem;
      vertical-align: middle;
      border-bottom: 1px solid var(--border);
    }
    .table tbody tr:hover {
      background-color: rgba(59, 130, 246, 0.05);
      transition: background-color 0.3s ease;
    }
    .table-responsive {
      border-radius: 8px;
      overflow-x: auto;
    }

    /* Form and Button Styling */
    .form-select {
      border-radius: 8px;
      border: 1px solid var(--border);
      padding: 0.75rem;
      font-size: 0.95rem;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .form-select:focus {
      border-color: var(--accent);
      box-shadow: 0 0 5px rgba(59, 130, 246, 0.3);
      outline: none;
    }
    .btn-outline-success, .btn-outline-danger {
      border-radius: 6px;
      font-weight: 500;
      padding: 0.5rem 1rem;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .btn-outline-success:hover {
      background-color: var(--highlight);
      color: #ffffff;
      transform: translateY(-2px);
    }
    .btn-outline-danger:hover {
      background-color: var(--warning);
      color: #ffffff;
      transform: translateY(-2px);
    }

    /* Pagination Styling */
    .pagination {
      margin-top: 1.5rem;
      justify-content: center;
    }
    .page-item.active .page-link {
      background-color: var(--accent);
      border-color: var(--accent);
      color: #ffffff;
    }
    .page-link {
      color: var(--primary);
      border-radius: 6px;
      margin: 0 3px;
      padding: 0.5rem 1rem;
      font-weight: 500;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .page-link:hover {
      background-color: var(--background);
      color: var(--accent);
      transform: translateY(-2px);
    }
    .page-item.disabled .page-link {
      color: #6b7280;
      cursor: not-allowed;
    }

    /* Modal */
    .modal-content {
      border-radius: 12px;
      border: none;
      overflow: hidden;
    }
    .modal-header {
      background-color: var(--primary);
      color: #ffffff;
      border-bottom: none;
      padding: 1rem 1.5rem;
    }
    .modal-body {
      padding: 1.5rem;
    }
    .modal-footer {
      border-top: none;
      padding: 1rem 1.5rem;
    }
    .btn-danger {
      background-color: var(--warning);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #dc2626;
    }
    .btn-secondary {
      background-color: #6b7280;
      border: none;
      border-radius: 6px;
      font-weight: 500;
    }
    .btn-secondary:hover {
      background-color: #4b5563;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .main-container {
        padding: 0 1rem;
      }
    }
    @media (max-width: 768px) {
      .navbar-brand {
        font-size: 1.3rem;
      }
      .nav-link {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
      }
      .section-header {
        font-size: 1.2rem;
      }
      .card-body {
        padding: 1.5rem;
      }
      .table {
        font-size: 0.9rem;
      }
    }
    @media (max-width: 576px) {
      .main-container {
        margin: 1rem auto;
      }
      .section-header {
        font-size: 1.1rem;
      }
      .table {
        font-size: 0.85rem;
      }
      .table th, .table td {
        padding: 0.75rem;
      }
      .btn-outline-success, .btn-outline-danger {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
      }
      .pagination {
        flex-wrap: wrap;
      }
      .page-link {
        padding: 0.4rem 0.8rem;
        font-size: 0.9rem;
      }
    }
  </style>
</head>
