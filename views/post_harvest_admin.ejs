  <!-- Main Content -->
  <div class="main-container">
    <div class="section-header">
      <i class="fas fa-fish"></i> Post-Harvest Records
    </div>

    <div class="card">
      
      <div class="card-body">
        
          <button onclick="window.print()" class="btn btn-secondary"><i class="fas fa-print me-2"></i> Print Table</button>

        <div class="form-section">
          <% if (error) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
          <% } %>
          <div class="table-container">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">License Number</th>
                  <th scope="col">Date Registered</th>
                  <th scope="col">Name</th>
                  <th scope="col">Address</th>
                  <th scope="col">Contact Info</th>
                  <th scope="col">Processing Method</th>
                  <th scope="col">Processing Location</th>
                  <th scope="col">Civil Status</th>
                </tr>
              </thead>
            <tbody>
  <% records.forEach(record => { %>
    <tr>
      <td><%= record.license_number %></td>
      <td>
        <%= new Date(record.date_registered).toLocaleDateString('en-US', {
            year: 'numeric', month: 'short', day: 'numeric'
        }) %>
      </td>
      <td><%= record.first_name %> <%= record.middle_name || '' %> <%= record.last_name %></td>
      <td><%= record.address %></td>
      <td><%= record.contact_info %></td>
      <td><%= record.processing_method %></td>
      <td><%= record.processing_location %></td>
      <td><%= record.civil_status %></td>
     <td>
  <button type="button" class="btn btn-outline-success btn-sm edit-btn"
          data-id="<%= record.id %>"
          data-license="<%= record.license_number %>"
          data-date="<%= new Date(record.date_registered).toISOString().split('T')[0] %>"
          data-first="<%= record.first_name %>"
          data-middle="<%= record.middle_name || '' %>"
          data-last="<%= record.last_name %>"
          data-address="<%= record.address %>"
          data-contact="<%= record.contact_info %>"
          data-method="<%= record.processing_method %>"
          data-location="<%= record.processing_location %>"
          data-civil="<%= record.civil_status %>">
    <i class="fas fa-edit"></i> Edit
      <button type="button" class="btn btn-outline-danger btn-sm delete-btn"
          data-id="<%= record.id %>"
          data-name="<%= record.first_name %> <%= record.last_name %>">
    <i class="fas fa-trash"></i> Delete
  </button>
  </button>
</td>


    </tr>
  <% }) %>
</tbody>

            </table>
