      <form id="deletePostHarvestForm" method="POST" action="/admin/post-harvest/delete">
        <div class="modal-body">
          <p>Are you sure you want to delete <strong id="delete-record-name"></strong>?</p>
          <input type="hidden" name="id" id="delete-id">
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i> Delete</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times me-1"></i> Cancel</button>
        </div>
      </form>
    </div>
  </div>
