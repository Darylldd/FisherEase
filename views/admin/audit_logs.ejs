              <li class="nav-item">
                <a class="nav-link" href="#">Welcome, <%= user.name %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <div class="container mt-4">
        <h2>Audit Logs & Activity Tracking</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Action</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody id="audit-log-table">
                <% logs.forEach(log => { %>
                    <tr>
                        <td><%= log.name %></td>
                        <td><%= log.action %></td>
                        <td><%= log.timestamp %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
    <script>
        setInterval(async () => {
            const response = await fetch('/audit/logs');
            const html = await response.text();
            document.getElementById('audit-log-table').innerHTML = new DOMParser()
                .parseFromString(html, 'text/html')
                .querySelector('#audit-log-table').innerHTML;
        }, 5000);
    </script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>