</div>

<!-- Logout Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Logout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">Are you sure you want to log out?</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
  </div>
</div>


    <!-- Audit Logs Section -->
    <div class="main-container">
        <div class="audit-section">
            <h2><i class="fas fa-history"></i> Audit Logs & Activity Tracking</h2>

            <!-- Audit Logs Table -->
            <div class="table-container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Action</th>
                            <th>Timestamp</th>
                        </tr>
                    </thead>
                    <tbody id="audit-log-table">
                        <% if (logs && logs.length) { %>
                            <% logs.forEach(log => { %>
                                <tr>
                                    <td><%= log.name %></td>
                                    <td><%= log.action %></td>
                                    <td><%= log.timestamp %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="3" class="no-logs">No logs found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        setInterval(async () => {
            try {
                const response = await fetch('/audit/logs');
                if (!response.ok) throw new Error('Network response was not ok');
                const html = await response.text();
                const newContent = new DOMParser()
                    .parseFromString(html, 'text/html')
                    .querySelector('#audit-log-table');
                if (newContent) {
                    document.getElementById('audit-log-table').innerHTML = newContent.innerHTML;
                }
            } catch (error) {
                console.error('Error refreshing audit logs:', error);
            }
        }, 5000);
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
  document.addEventListener("DOMContentLoaded", function() {
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");

    sidebarToggle.addEventListener("click", function() {
      sidebar.classList.toggle("active");
    });

    // Optional: Close sidebar when clicking outside (on mobile/tablet)
    document.addEventListener("click", function(e) {
      if (window.innerWidth <= 991 && 
          !sidebar.contains(e.target) && 
          !sidebarToggle.contains(e.target)) {
        sidebar.classList.remove("active");
      }
    });
  });
</script>
</body>
</html>