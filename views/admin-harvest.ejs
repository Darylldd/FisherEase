                        <li><a class="dropdown-item dropdown-item-export" href="/harvest/export/excel?<%= filters ? new URLSearchParams(filters).toString() : '' %>">Excel</a></li>
                    </ul>
                </div>
            </div>
            <div class="table-container">
                <table class="table table-striped" id="harvestTable">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Fish Type</th>
                            <th>Quantity</th>
                            <th>Unit</th>
                            <th>Ownership</th>
                            <th>Source of Fry</th>
                            <th>Market Destination</th>
                            <th>Remarks</th>
                            <th>Date Harvested</th>
                        </tr>
