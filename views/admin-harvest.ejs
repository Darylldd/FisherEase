    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Pagination logic
        const rowsPerPage = 10;
        let currentPage = 1;
        let totalPages = 1;

        function setupPagination() {
            const tableBody = document.getElementById('harvestTableBody');
            const rows = tableBody.querySelectorAll('tr:not(.no-harvests)');
            totalPages = Math.ceil(rows.length / rowsPerPage);
            const paginationControls = document.getElementById('paginationControls');
            const pageNumbersContainer = document.getElementById('pageNumbers');

            if (rows.length > rowsPerPage) {
                paginationControls.style.display = 'flex';
            }

            function updateTable() {
                rows.forEach((row, index) => {
                    row.style.display = (index >= (currentPage - 1) * rowsPerPage && index < currentPage * rowsPerPage) ? '' : 'none';
                });
                updatePaginationControls();
            }

            function updatePaginationControls() {
                pageNumbersContainer.innerHTML = '';
                const maxVisiblePages = 5;
                let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
                let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);

                if (endPage - startPage + 1 < maxVisiblePages) {
                    startPage = Math.max(1, endPage - maxVisiblePages + 1);
                }

                if (startPage > 1) {
                    const firstPageBtn = document.createElement('button');
                    firstPageBtn.className = 'pagination-btn';
                    firstPageBtn.textContent = '1';
                    firstPageBtn.addEventListener('click', () => {
                        currentPage = 1;
                        updateTable();
                    });
                    pageNumbersContainer.appendChild(firstPageBtn);

                    if (startPage > 2) {
                        const dots = document.createElement('span');
                        dots.textContent = '...';
                        dots.style.margin = '0 0.5rem';
                        pageNumbersContainer.appendChild(dots);
                    }
                }

                for (let i = startPage; i <= endPage; i++) {
                    const pageBtn = document.createElement('button');
                    pageBtn.className = `pagination-btn ${i === currentPage ? 'active' : ''}`;
                    pageBtn.textContent = i;
                    pageBtn.addEventListener('click', () => {
                        currentPage = i;
                        updateTable();
                    });
                    pageNumbersContainer.appendChild(pageBtn);
                }

                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) {
                        const dots = document.createElement('span');
                        dots.textContent = '...';
                        dots.style.margin = '0 0.5rem';
                        pageNumbersContainer.appendChild(dots);
                    }

                    const lastPageBtn = document.createElement('button');
                    lastPageBtn.className = 'pagination-btn';
                    lastPageBtn.textContent = totalPages;
                    lastPageBtn.addEventListener('click', () => {
                        currentPage = totalPages;
                        updateTable();
                    });
                    pageNumbersContainer.appendChild(lastPageBtn);
                }

                document.getElementById('prevPage').disabled = currentPage === 1;
                document.getElementById('nextPage').disabled = currentPage === totalPages;
            }

            document.getElementById('prevPage').addEventListener('click', () => {
                if (currentPage > 1) {
                    currentPage--;
                    updateTable();
                }
            });

            document.getElementById('nextPage').addEventListener('click', () => {
                if (currentPage < totalPages) {
                    currentPage++;
                    updateTable();
                }
            });

            updateTable();
        }

        // Initialize pagination on page load
        document.addEventListener('DOMContentLoaded', setupPagination);

        function exportToPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            doc.setFontSize(16);
            doc.text("Harvest & Production Report", 14, 15);

            const table = document.getElementById("harvestTable");
            const headers = Array.from(table.querySelectorAll("th")).map(th => th.textContent);
            const data = Array.from(table.querySelectorAll("tbody tr"))
                .filter(row => row.querySelectorAll("td").length === 9) // Exclude "no records" row
                .map(row => Array.from(row.querySelectorAll("td")).map(td => td.textContent));

            doc.autoTable({
                head: [headers],
                body: data,
                startY: 25,
                theme: 'grid',
                headStyles: {
                    fillColor: [30, 58, 138], // Matches var(--primary)
                    textColor: [255, 255, 255],
                    fontSize: 12,
                    halign: 'center'
                },
                bodyStyles: {
                    textColor: [31, 41, 55], // Matches var(--text)
                    fontSize: 10,
                    halign: 'left'
                },
                alternateRowStyles: {
                    fillColor: [240, 244, 255] // Matches var(--background) for odd rows
                },
                margin: { top: 20 },
                tableWidth: 'auto',
                columnWidth: 'auto'
            });

            doc.save("harvest_report.pdf");
        }

        function exportToExcel() {
            const table = document.getElementById("harvestTable");
            const wb = XLSX.utils.table_to_book(table, { sheet: "Harvest Report" });
            XLSX.writeFile(wb, "harvest_report.xlsx");
        }
    </script>

    
