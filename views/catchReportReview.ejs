        /* Main Container */
        .main-container {
            max-width: 1500px; /* Compact width for table */
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        /* Report Section */
        .report-section {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .report-section:hover {
            transform: translateY(-4px);
        }
        .report-section h3 {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 1.5rem;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        .report-section h3 i {
            color: var(--accent);
        }

        /* Filters */
        .filters-container {
            margin-bottom: 1.5rem;
        }
        .filters-container .form-control,
        .filters-container .form-select {
            border: 1px solid var(--border);
            border-radius: 6px;
            font-size: 0.9rem;
            padding: 0.5rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .filters-container .form-control:focus,
        .filters-container .form-select:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.1);
            outline: none;
        }
        .filters-container .form-control::placeholder {
            color: #9ca3af;
        }
        .filters-container .btn-primary {
            background-color: var(--accent);
            border: none;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .filters-container .btn-primary:hover {
            background-color: #2563eb;
            transform: translateY(-2px);
        }

        /* Export Button */
        .export-btn-group {
            margin-bottom: 1.5rem;
            text-align: right;
        }
        .btn-export {
            background-color: var(--accent);
            color: #ffffff;
            font-weight: 500;
            border-radius: 6px;
            transition: background-color 0.3s ease;
        }
        .btn-export:hover {
            background-color: #2563eb;
        }
        .dropdown-menu-export {
            min-width: 120px;
            border-radius: 6px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .dropdown-item-export {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
        .dropdown-item-export:hover {
            background-color: var(--background);
            color: var(--accent);
        }

        /* Table */
        .table-container {
            max-height: 400px;
            overflow-y: auto;
            border-radius: 8px;
        }
        .table {
            font-size: 0.9rem;
            margin-bottom: 0;
        }
        .table thead {
            background-color: var(--primary);
            color: #ffffff;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        .table th, .table td {
            padding: 0.75rem;
            vertical-align: middle;
            white-space: nowrap;
        }
        .table tbody tr {
            transition: background-color 0.3s ease;
        }
        .table tbody tr:hover {
            background-color: rgba(59, 130, 246, 0.05);
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.02);
        }
        .no-reports {
            text-align: center;
            padding: 1.5rem;
            color: #6b7280;
            font-size: 0.95rem;
        }

        /* Dropdown Actions */
        .dropdown-toggle {
            background-color: #6b7280;
            border: none;
            border-radius: 6px;
            font-size: 0.85rem;
            padding: 0.4rem 0.8rem;
        }
        .dropdown-toggle:hover {
            background-color: #4b5563;
        }
        .dropdown-menu {
            min-width: 120px;
        }
        .approve-btn i {
            color: var(--highlight);
        }
        .flag-btn i {
            color: var(--warning);
        }

        /* Pagination */
        .pagination-container {
            margin-top: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .pagination-controls {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .pagination-controls .btn {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
        }
        .pagination-controls .btn-primary {
            background-color: var(--accent);
            border: none;
        }
        .pagination-controls .btn-primary:hover {
            background-color: #2563eb;
        }
        .pagination-controls .btn-primary:disabled {
            background-color: #6b7280;
            cursor: not-allowed;
        }
        .pagination-controls .form-select {
            width: auto;
            font-size: 0.9rem;
        }
        .pagination-info {
            font-size: 0.9rem;
            color: #6b7280;
        }

        /* Modal */
        .modal-content {
            border-radius: 12px;
            border: none;
            overflow: hidden;
        }
        .modal-header {
            background-color: var(--primary);
            color: #ffffff;
            border-bottom: none;
            padding: 1rem 1.5rem;
        }
        .modal-body {
            padding: 1.5rem;
        }
        .modal-footer {
            border-top: none;
            padding: 1rem 1.5rem;
        }
        .btn-danger {
            background-color: var(--warning);
            border: none;
            border-radius: 6px;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }
        .btn-danger:hover {
            background-color: #dc2626;
        }
        .btn-secondary {
            background-color: #6b7280;
            border: none;
            border-radius: 6px;
            font-weight: 500;
        }
        .btn-secondary:hover {
            background-color: #4b5563;
        }

