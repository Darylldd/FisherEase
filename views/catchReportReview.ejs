            --card-bg: #ffffff;
            --text: #1f2937;
            --border: #d1d5db;
            --highlight: #10b981; /* Green for success */
            --warning: #ef4444; /* Red for alerts */
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--background);
            color: var(--text);
            margin: 0;
            padding: 0;
        }

