    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Pagination logic
        document.addEventListener('DOMContentLoaded', function () {
            const tableBody = document.getElementById('reportTableBody');
            const prevPageBtn = document.getElementById('prevPage');
            const nextPageBtn = document.getElementById('nextPage');
            const pageSizeSelect = document.getElementById('pageSizeSelect');
            const paginationInfo = document.getElementById('paginationInfo');

            let currentPage = 1;
            let pageSize = parseInt(pageSizeSelect.value);
            let allRows = Array.from(tableBody.getElementsByTagName('tr'));

            function updatePagination() {
                const totalRows = allRows.filter(row => !row.classList.contains('no-reports')).length;
                const totalPages = Math.ceil(totalRows / pageSize);

                // Ensure current page is within bounds
                if (currentPage < 1) currentPage = 1;
                if (currentPage > totalPages) currentPage = totalPages;

                // Hide all rows initially
                allRows.forEach(row => row.style.display = 'none');

                // Show rows for the current page
                const start = (currentPage - 1) * pageSize;
                const end = start + pageSize;
                const rowsToShow = allRows.slice(start, end);
                rowsToShow.forEach(row => row.style.display = '');

                // Update pagination info
                const startRow = totalRows === 0 ? 0 : start + 1;
                const endRow = Math.min(start + pageSize, totalRows);
                paginationInfo.textContent = `Showing ${startRow} to ${endRow} of ${totalRows} reports`;

                // Enable/disable buttons
                prevPageBtn.disabled = currentPage === 1;
                nextPageBtn.disabled = currentPage === totalPages || totalRows === 0;
            }

            // Initial pagination setup
            updatePagination();

            // Event listeners
            pageSizeSelect.addEventListener('change', function () {
                pageSize = parseInt(this.value);
                currentPage = 1; // Reset to first page
                updatePagination();
            });

            prevPageBtn.addEventListener('click', function () {
                if (currentPage > 1) {
                    currentPage--;
                    updatePagination();
                }
            });

            nextPageBtn.addEventListener('click', function () {
                const totalRows = allRows.filter(row => !row.classList.contains('no-reports')).length;
                const totalPages = Math.ceil(totalRows / pageSize);
                if (currentPage < totalPages) {
                    currentPage++;
                    updatePagination();
                }
            });
        });

function exportToPDF() {
  const { jsPDF } = window.jspdf;
  const species = document.querySelector('input[name="species"]').value;
  const location = document.querySelector('input[name="location"]').value;
  const status = document.querySelector('select[name="status"]').value;
  const date = document.querySelector('input[name="date"]').value;
  const month = document.querySelector('select[name="month"]').value;
  const year = document.querySelector('select[name="year"]').value;

  if (month && !year) {
    alert("Please select a year when filtering by month.");
    return;
  }
  if (year && !month) {
    alert("Please select a month when filtering by year.");
    return;
  }

  const queryParams = new URLSearchParams({
    species, location, status, date, month, year
  }).toString();

  fetch(`/catch-report/admin/download-report?${queryParams}`, {
    method: 'GET',
    headers: {
      'Accept': 'application/pdf'
    }
  })
    .then(response => {
      if (!response.ok) {
        return response.text().then(text => {
          throw new Error(`Server responded with status ${response.status}: ${text}`);
        });
      }
      const contentType = response.headers.get('content-type');
      if (!contentType || !contentType.includes('application/pdf')) {
        throw new Error('Response is not a PDF');
      }
      return response.blob();
    })
    .then(blob => {
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      const filename = month && year ? `catch_report_${month}_${year}.pdf` : 'catch_report.pdf';
      a.download = filename;
      document.body.appendChild(a);
      a.click();
      a.remove();
      window.URL.revokeObjectURL(url);
    })
    .catch(error => {
      console.error('Error exporting to PDF from server:', error);
      alert(`Server-side PDF export failed: ${error.message}. Falling back to local PDF generation.`);

      // Fallback to client-side PDF generation
      const doc = new jsPDF();
      doc.setFont('Poppins', 'normal');
      doc.text('Catch Report', 14, 20);

      const table = document.getElementById('catchReportTable');
      const rows = Array.from(table.querySelectorAll('tbody tr'))
        .filter(row => !row.classList.contains('no-reports'))
        .filter(row => {
          if (month && year) {
            const dateCell = row.querySelector('td:nth-child(7)').textContent;
            const [rowYear, rowMonth] = dateCell.split('-');
            return rowMonth === String(parseInt(month)).padStart(2, '0') && rowYear === year;
          }
          return true;
        });

      const tableData = rows.map(row => {
        const cells = row.querySelectorAll('td');
        return [
          cells[0].textContent || 'N/A',
          cells[1].textContent || 'N/A',
          cells[2].textContent || 'N/A',
          cells[3].textContent || 'N/A',
          cells[4].textContent || 'N/A',
          cells[5].textContent || 'N/A',
          cells[6].textContent || 'N/A'
        ];
      });

      if (tableData.length === 0) {
        doc.text('No reports found for the specified filters.', 14, 30);
      } else {
        doc.autoTable({
          head: [['User', 'Species', 'Methods Of Fishing', 'Quantity', 'Location', 'Status', 'Date']],
          body: tableData,
          startY: 30,
          theme: 'striped',
          headStyles: { fillColor: [30, 58, 138] },
          styles: { font: 'Poppins', fontSize: 8 }
        });
      }

      let filterInfo = 'Filters Applied:';
      if (species) filterInfo += ` Species: ${species}`;
      if (location) filterInfo += ` Location: ${location}`;
      if (status) filterInfo += ` Status: ${status}`;
      if (date) filterInfo += ` Date: ${date}`;
      if (month) filterInfo += ` Month: ${month}`;
      if (year) filterInfo += ` Year: ${year}`;
      doc.text(filterInfo, 14, doc.lastAutoTable?.finalY + 10 || 40);

      const filename = month && year ? `catch_report_${month}_${year}.pdf` : 'catch_report.pdf';
      doc.save(filename);
    });
}        

