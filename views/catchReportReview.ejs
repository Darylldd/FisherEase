                            <option value="">Month</option>
                            <% for (let i = 1; i <= 12; i++) { %>
                                <option value="<%= i %>" <%= filters.month == i ? 'selected' : '' %>><%= i %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-md-2">
