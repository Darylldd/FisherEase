  <div class="main-container">
    <!-- Log Fishing Activity Section -->
    <div class="section-header">
      <i class="fas fa-anchor"></i> Log Fishing Activity
    </div>
    <div class="form-container">
      <form action="/fishing-activity-tracking/add" method="POST">
        <div class="mb-3">
          <label for="date">Date:</label>
          <input type="date" id="date" name="date" required>
        </div>
        <div class="mb-3">
          <label for="start_time">Start Time:</label>
          <input type="time" id="start_time" name="start_time" required>
        </div>
        <div class="mb-3">
          <label for="end_time">End Time:</label>
          <input type="time" id="end_time" name="end_time" required>
        </div>
        <div class="mb-3">
          <label for="location">Location:</label>
          <input type="text" id="location" name="location" required>
        </div>
        <div class="mb-3">
          <label for="method">Method:</label>
          <input type="text" id="method" name="method" required>
        </div>
        <div class="mb-3">
          <label for="weather">Weather Conditions:</label>
          <input type="text" id="weather" name="weather" required>
        </div>
        <button type="submit">Add Fishing Activity</button>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");

    sidebarToggle.addEventListener("click", function() {
      sidebar.classList.toggle("active");
    });

    // Optional: Close sidebar when clicking outside (on mobile/tablet)
    document.addEventListener("click", function(e) {
      if (window.innerWidth <= 991 && 
          !sidebar.contains(e.target) && 
          !sidebarToggle.contains(e.target)) {
        sidebar.classList.remove("active");
      }
    });
  });
</script>

