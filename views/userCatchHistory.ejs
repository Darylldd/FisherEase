    }
    .catch-history-content h2 {
      font-size: 1.8rem;
      font-weight: 600;
      color: var(--primary);
      margin-bottom: 1rem;
      text-align: center;
    }

    /* Export Forms */
    .export-form {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-bottom: 1rem;
      justify-content: center;
    }
    .export-form .form-select {
      max-width: 150px;
      font-size: 0.9rem;
      border-radius: 6px;
      border-color: var(--border);
      transition: border-color 0.3s ease;
