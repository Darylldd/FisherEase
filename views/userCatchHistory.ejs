  </ul>
</div>

<!-- Logout Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Logout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">Are you sure you want to log out?</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
  </div>
</div>

  <div class="main-container">
    <!-- Catch History Section -->
    <div class="section-header">
      <i class="fas fa-history"></i> My Catch History
    </div>
    <div class="catch-history-content">
      <h2>My Catch Report History</h2>

      <% 
        const currentMonth = new Date().getMonth() + 1;
        const currentYear = new Date().getFullYear();
      %>

      <!-- PDF Export Form -->
      <form action="/catch-report/export/pdf" method="get" class="export-form">
        <select name="month" class="form-select form-select-sm">
          <option value="">All Months</option>
          <% for (let m = 1; m <= 12; m++) { %>
            <option value="<%= m %>" <%= m === currentMonth ? 'selected' : '' %>>
              <%= new Date(0, m - 1).toLocaleString('default', { month: 'long' }) %>
            </option>
          <% } %>
        </select>
        <select name="year" class="form-select form-select-sm">
          <option value="">All Years</option>
          <% for (let y = currentYear; y >= currentYear - 5; y--) { %>
            <option value="<%= y %>" <%= y === currentYear ? 'selected' : '' %>><%= y %></option>
          <% } %>
        </select>
        <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-file-pdf me-1"></i> Export PDF</button>
      </form>

      <!-- Excel Export Form -->
      <form action="/catch-report/export/excel" method="get" class="export-form">
        <select name="month" class="form-select form-select-sm">
          <option value="">All Months</option>
          <% for (let m = 1; m <= 12; m++) { %>
            <option value="<%= m %>" <%= m === currentMonth ? 'selected' : '' %>>
              <%= new Date(0, m - 1).toLocaleString('default', { month: 'long' }) %>
            </option>
          <% } %>
        </select>
        <select name="year" class="form-select form-select-sm">
          <option value="">All Years</option>
          <% for (let y = currentYear; y >= currentYear - 5; y--) { %>
            <option value="<%= y %>" <%= y === currentYear ? 'selected' : '' %>><%= y %></option>
          <% } %>
        </select>
        <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-file-excel me-1"></i> Export Excel</button>
      </form>

      <!-- Direct Export Buttons -->
      <div class="export-all-buttons">
        <a href="/catch-report/export/pdf" class="btn btn-danger"><i class="fas fa-file-pdf me-1"></i> Download All PDF</a>
        <a href="/catch-report/export/excel" class="btn btn-success"><i class="fas fa-file-excel me-1"></i> Download All Excel</a>
      </div>

      <% if (reports.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark text-center">
              <tr>
                <th>#</th>
                <th>Species</th>
                <th>Method</th>
                <th>Quantity</th>
                <th>Location</th>
                <th>Status</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% reports.forEach((report, index) => { %>
                <tr>
                  <td class="text-center"><%= index + 1 %></td>
                  <td><%= report.species || 'N/A' %></td>
                  <td><%= report.method_of_fishing || 'N/A' %></td>
                  <td class="text-center"><%= report.quantity || 'N/A' %></td>
                  <td><%= report.location || 'N/A' %></td>
                  <td class="text-center">
                    <% if (report.status === 'Approved') { %>
                      <span class="badge bg-success">Approved</span>
                    <% } else if (report.status === 'Flagged') { %>
                      <span class="badge bg-danger">Flagged</span>
                    <% } else { %>
                      <span class="badge bg-secondary"><%= report.status || 'Under Review' %></span>
                    <% } %>
                  </td>
                  <td class="text-center"><%= report.date ? new Date(report.date).toLocaleDateString() : 'N/A' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info text-center">You have no catch reports yet.</div>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");

    sidebarToggle.addEventListener("click", function() {
      sidebar.classList.toggle("active");
    });

    // Optional: Close sidebar when clicking outside (on mobile/tablet)
    document.addEventListener("click", function(e) {
      if (window.innerWidth <= 991 && 
          !sidebar.contains(e.target) && 
          !sidebarToggle.contains(e.target)) {
        sidebar.classList.remove("active");
      }
    });
  });
</script>

</body>
</html>