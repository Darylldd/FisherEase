      });

      window.statusChartInstance = new Chart(document.getElementById("statusChart"), {
        type: "pie",
        data: {
          labels: statusLabels,
          datasets: [{
            data: statusCounts,
            backgroundColor: ["rgba(16, 185, 129, 0.7)", "rgba(239, 68, 68, 0.7)", "rgba(234, 179, 8, 0.7)"],
            borderColor: "#ffffff",
            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { position: 'bottom', labels: { font: { family: 'Poppins', size: 12 } } }
          }
        }
      });

      window.dailyChartInstance = new Chart(document.getElementById("dailyChart"), {
        type: "line",
        data: {
          labels: dailyLabels,
          datasets: [{
            label: "Reports Over Time",
            data: dailyCounts,
            borderColor: "rgba(59, 130, 246, 0.8)",
            backgroundColor: "rgba(59, 130, 246, 0.2)",
            fill: true,
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: { beginAtZero: true, title: { display: true, text: 'Reports', font: { family: 'Poppins', size: 12 } } }
          },
          plugins: {
            legend: { labels: { font: { family: 'Poppins', size: 12 } } }
          }
        }
      });

      window.violationChartInstance = new Chart(document.getElementById("violationChart"), {
        type: "bar",
        data: {
          labels: violationLabels,
          datasets: [{
            label: "Violations by Type",
            data: violationCounts,
            backgroundColor: "rgba(239, 68, 68, 0.7)",
            borderColor: "rgba(239, 68, 68, 1)",
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: { beginAtZero: true, title: { display: true, text: 'Count', font: { family: 'Poppins', size: 12 } } }
          },
          plugins: {
            legend: { display: false }
          }
        }
      });

      window.harvestChartInstance = new Chart(document.getElementById("harvestChart"), {
        type: "bar",
        data: {
          labels: harvestLabels,
          datasets: [{
            label: "Quantity by Fish Type",
            data: harvestQuantities,
            backgroundColor: "rgba(34, 139, 34, 0.7)",
            borderColor: "rgba(34, 139, 34, 1)",
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: { beginAtZero: true, title: { display: true, text: 'Total Quantity', font: { family: 'Poppins', size: 12 } } }
          },
          plugins: {
            legend: { display: true, position: 'top', labels: { font: { family: 'Poppins', size: 12 } } }
          }
        }
      });

      window.aquacultureChartInstance = new Chart(document.getElementById("aquacultureChart"), {
        type: "bar",
        data: {
          labels: owners,
          datasets: aquacultureDatasets
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            x: { stacked: true, title: { display: true, text: 'Owner', font: { family: 'Poppins', size: 12 } } },
            y: { stacked: true, beginAtZero: true, title: { display: true, text: 'Number of Facilities', font: { family: 'Poppins', size: 12 } } }
          },
          plugins: {
            legend: { display: true, position: 'top', labels: { font: { family: 'Poppins', size: 12 } } }
          }
        }
      });

      window.fisherfolkChartInstance = new Chart(document.getElementById("fisherfolkChart"), {
        type: "pie",
        data: {
          labels: fisherfolkLabels,
          datasets: [{
            label: "Fisherfolk by Fishing Zone",
            data: fisherfolkCounts,
            backgroundColor: [
              "rgba(255, 99, 132, 0.7)",
              "rgba(54, 162, 235, 0.7)",
              "rgba(255, 206, 86, 0.7)",
              "rgba(75, 192, 192, 0.7)",
              "rgba(153, 102, 255, 0.7)",
              "rgba(255, 159, 64, 0.7)"
            ],
            borderColor: "#ffffff",
            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { position: 'bottom', labels: { font: { family: 'Poppins', size: 12 } } }
          }
        }
      });

      window.postHarvestChartInstance = new Chart(document.getElementById("postHarvestChart"), {
        type: "pie",
        data: {
          labels: postHarvestLabels,
          datasets: [{
            label: "Post-Harvest by Processing Method",
            data: postHarvestCounts,
            backgroundColor: [
