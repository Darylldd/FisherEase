        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard/admin">Dashboard</a>
          </li>
          <!-- Registration Dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownRegister" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Register
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownRegister">
              <li><a class="dropdown-item" href="/register/fisherfolk">Fisherfolk Registration</a></li>
              <li><a class="dropdown-item" href="/aquaculture/register">Aquaculture Facility Registration</a></li>
             

            </ul>
          </li>

          <!-- Reports & Tracking Dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReports" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Reports & Tracking
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownReports">
              <li><a class="dropdown-item" href="/catch-report/review">Catch Report Review Page</a></li>
              <li><a class="dropdown-item" href="/fishing-activity-log">Fishing Activity Tracking</a></li>
              <li><a class="dropdown-item" href="/enforcement-compliance-logging">Enforcement and Compliance Logging</a></li>
              <li><a class="dropdown-item" href="/violation-notifications">Violation Notification System</a></li>
              <li><a class="dropdown-item" href="/audit/logs">Audit Logs & Activity Tracking</a></li>
               <li><a class="dropdown-item" href="/harvest/admin-view">ðŸ“Š Harvest & Production Data Entry</a></li>
               <li>
                <a class="dropdown-item" href="/fish-species">
                    Fish Species Guide
                </a>
            </li>
            <li><a class="dropdown-item" href="/admin/fish-species/add">âž• Add Fish Species</a></li>
            </ul>
          </li>
          <!-- Tools Dropdown -->
<li class="nav-item dropdown">
  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownTools" role="button" data-bs-toggle="dropdown" aria-expanded="false">
    Tools
  </a>
  <ul class="dropdown-menu" aria-labelledby="navbarDropdownTools">
    <li><a class="dropdown-item" href="/catch-report/admin/report">Generate Catch Report</a></li>
    <li><a class="dropdown-item" href="#">Gov Reports</a></li>
    <li><a class="dropdown-item" href="/climate-analysis">Climate Event Analysis</a></li>
  </ul>
</li>

          <li class="nav-item">
            <a class="nav-link" href="#">Welcome, <%= user.name %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
 
  <!-- Logout Confirmation Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to log out?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container mt-4">


    <!-- Weather Forecast Section -->
    <div id="weather-forecast" class="mt-4">
      <h3>Weather Forecast for Calapan City, Philippines</h3>
      <div id="forecast-cards">
        <!-- Weather cards will be inserted here -->
      </div>
    </div>

    <!-- Dashboard Cards -->
    <div class="row mt-4">
      <div class="col-md-4">
        <div class="card text-white bg-primary shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Reports</h5>
            <p class="card-text" id="totalReports">Loading...</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-success shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Approved Reports</h5>
            <p class="card-text" id="approvedReports">Loading...</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-danger shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Flagged Reports</h5>
            <p class="card-text" id="flaggedReports">Loading...</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="row mt-4">
      <div class="col-md-4">
        <canvas id="speciesChart"></canvas>
      </div>
      <div class="col-md-4">
        <canvas id="statusChart"></canvas>
      </div>
      <div class="col-md-4">
        <canvas id="dailyChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/dashboardAnalytics.js"></script>
  <script src="/js/weatherapi.js">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
