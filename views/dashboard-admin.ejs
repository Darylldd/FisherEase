        document.getElementById("modalTotalFacilities").innerText = data.totalFacilities ?? "N/A";
        document.getElementById("modalTotalFisherfolk").innerText = data.totalFisherfolk ?? "N/A";
        document.getElementById("modalTotalPostHarvest").innerText = data.totalPostHarvest ?? "N/A"; // Add this

        // Render charts
        renderCharts(data.speciesData, data.statusData, data.dailyReports, data.violationData, data.harvestData, data.aquacultureOwnerSpeciesData, data.fisherfolkAnalytics, data.postHarvestAnalytics);
      } catch (error) {
        console.error("âŒ Error loading analytics data:", error);
      }
    });

    function renderCharts(speciesData, statusData, dailyReports, violationData, harvestData, aquacultureOwnerSpeciesData, fisherfolkAnalytics, postHarvestAnalytics) {
      const speciesLabels = speciesData.map(item => item.species);
      const speciesCounts = speciesData.map(item => item.count);

      const statusLabels = statusData.map(item => item.status);
      const statusCounts = statusData.map(item => item.count);

      const dailyLabels = dailyReports.map(item => item.report_date.split("T")[0]);
      const dailyCounts = dailyReports.map(item => item.count);

      const violationLabels = violationData.map(item => item.violation_type);
      const violationCounts = violationData.map(item => item.count);

      const harvestLabels = harvestData.map(item => item.fish_type);
      const harvestQuantities = harvestData.map(item => item.total_quantity);

      const owners = [...new Set(aquacultureOwnerSpeciesData.map(item => item.owner))];
      const species = [...new Set(aquacultureOwnerSpeciesData.map(item => item.species))];
      const aquacultureDatasets = species.map((spec, index) => {
        return {
          label: spec,
          data: owners.map(owner => {
            const record = aquacultureOwnerSpeciesData.find(item => item.owner === owner && item.species === spec);
            return record ? record.count : 0;
          }),
          backgroundColor: `rgba(${Math.floor(Math.random() * 255)}, ${Math.floor(Math.random() * 255)}, ${Math.floor(Math.random() * 255)}, 0.7)`,
          borderColor: `rgba(${Math.floor(Math.random() * 255)}, ${Math.floor(Math.random() * 255)}, ${Math.floor(Math.random() * 255)}, 1)`,
          borderWidth: 1
        };
      });

      const fisherfolkLabels = fisherfolkAnalytics.map(item => item.fishing_zone);
      const fisherfolkCounts = fisherfolkAnalytics.map(item => item.count);

      const postHarvestLabels = postHarvestAnalytics.map(item => item.processing_method);
      const postHarvestCounts = postHarvestAnalytics.map(item => item.count);

      // Destroy existing charts if they exist
      if (window.speciesChartInstance) window.speciesChartInstance.destroy();
      if (window.statusChartInstance) window.statusChartInstance.destroy();
      if (window.dailyChartInstance) window.dailyChartInstance.destroy();
      if (window.violationChartInstance) window.violationChartInstance.destroy();
      if (window.harvestChartInstance) window.harvestChartInstance.destroy();
      if (window.aquacultureChartInstance) window.aquacultureChartInstance.destroy();
