<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Fisheries Management</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    :root {
      --primary: #1e3a8a; /* Deep navy */
      --accent: #3b82f6; /* Vibrant blue */
      --background: #f0f4ff; /* Light blue-gray */
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981; /* Green for success */
      --warning: #ef4444; /* Red for alerts */
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    /* Navbar */
    .navbar {
      background-color: var(--primary);
      padding: 1rem 1.5rem;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .navbar-brand {
      font-weight: 600;
      font-size: 1.5rem;
      color: #ffffff !important;
      letter-spacing: 0.5px;
    }
    .nav-link {
      color: #ffffff !important;
      font-weight: 400;
      font-size: 0.95rem;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .nav-link:hover {
      background-color: var(--accent);
      transform: translateY(-1px);
    }
    .dropdown-menu {
      background-color: var(--card-bg);
      border: none;
      border-radius: 8px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      margin-top: 0.75rem;
      padding: 0.5rem 0;
    }
    .dropdown-item {
      color: var(--text);
      font-weight: 400;
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      margin: 0 0.5rem;
    }
    .dropdown-item:hover {
      background-color: var(--background);
      color: var(--accent);
    }
    .dropdown-item i {
      width: 24px;
      text-align: center;
    }
    .navbar-nav .nav-item {
      margin-left: 0.5rem;
    }

    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    /* Cards */
    .card {
      background-color: var(--card-bg);
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    .card-body {
      padding: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .card-icon {
      font-size: 2rem;
      color: var(--accent);
      background-color: rgba(59, 130, 246, 0.1);
      padding: 0.75rem;
      border-radius: 8px;
    }
    .card-content h5 {
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--text);
      margin: 0;
    }
    .card-content p {
      font-size: 1.6rem;
      font-weight: 600;
      color: var(--primary);
      margin: 0;
    }
    .status-total { color: var(--primary); }
    .status-approved { color: var(--highlight); }
    .status-flagged { color: var(--warning); }

    /* Charts */
    .chart-container {
      background-color: var(--card-bg);
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      height: 360px;
      position: relative;
    }
    .chart-container h5 {
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--text);
      margin-bottom: 1rem;
    }
    canvas {
      width: 100% !important;
      height: 100% !important;
    }

    /* Modal */
    .modal-content {
      border-radius: 12px;
      border: none;
      overflow: hidden;
    }
    .modal-header {
      background-color: var(--primary);
      color: #ffffff;
      border-bottom: none;
      padding: 1rem 1.5rem;
    }
    .modal-body {
      padding: 1.5rem;
    }
    .modal-footer {
      border-top: none;
      padding: 1rem 1.5rem;
    }
    .btn-danger {
      background-color: var(--warning);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #dc2626;
    }
    .btn-secondary {
      background-color: #6b7280;
      border: none;
      border-radius: 6px;
      font-weight: 500;
    }
    .btn-secondary:hover {
      background-color: #4b5563;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .main-container {
        padding: 0 1rem;
      }
      .chart-container {
        height: 320px;
      }
    }
    @media (max-width: 768px) {
      .navbar-brand {
        font-size: 1.3rem;
      }
      .nav-link {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
      }
      .section-header {
        font-size: 1.2rem;
      }
      .card-content p {
        font-size: 1.4rem;
      }
      .chart-container {
        height: 280px;
      }
    }
    @media (max-width: 576px) {
      .main-container {
        margin: 1rem auto;
      }
      .section-header {
        font-size: 1.1rem;
      }
      .card-body {
        flex-direction: column;
        text-align: center;
      }
      .card-icon {
        margin-bottom: 0.5rem;
      }
      .chart-container {
        height: 240px;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="main-container">
      <a class="navbar-brand" href="#">Fisheries Management Office</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard/admin"><i class="fas fa-tachometer-alt me-1"></i> Dashboard</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownRegister" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-user-plus me-1"></i> Register
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownRegister">
              <li><a class="dropdown-item" href="/register/fisherfolk"><i class="fas fa-fish me-2"></i> Fisherfolk Registration</a></li>
              <li><a class="dropdown-item" href="/aquaculture/register"><i class="fas fa-water me-2"></i> Aquaculture Facility Registration</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReports" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-file-alt me-1"></i> Reports & Tracking
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownReports">
              <li><a class="dropdown-item" href="/catch-report/review"><i class="fas fa-clipboard-check me-2"></i> Catch Report Review</a></li>
              <li><a class="dropdown-item" href="/fishing-activity"><i class="fas fa-anchor me-2"></i> Fishing Activity Tracking</a></li>
              <li><a class="dropdown-item" href="/fishing-vessel-registration"><i class="fas fa-gavel me-2"></i> Enforcement and Compliance</a></li>
              <li><a class="dropdown-item" href="/fishing-vessel-registrations"><i class="fas fa-gavel me-2"></i> Vessel Table</a></li>
              <li><a class="dropdown-item" href="/violation-notifications"><i class="fas fa-exclamation-triangle me-2"></i> Violation Notifications</a></li>
         
              <li><a class="dropdown-item" href="/harvest/admin-view"><i class="fas fa-chart-line me-2"></i> Harvest & Production Data</a></li>
  
              <li><a class="dropdown-item" href="/fisherfolk/table"><i class="fas fa-table me-2"></i> Fisherfolk Table</a></li>
              <li><a class="dropdown-item" href="/admeasurement-form"><i class="fas fa-table me-2"></i> Admeasurement</a></li>
              <li><a class="dropdown-item" href="/admeasurement-forms"><i class="fas fa-table me-2"></i> Admeasurement List</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownTools" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-tools me-1"></i> Tools
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownTools">
                          <li><a class="dropdown-item" href="/fish-species"><i class="fas fa-fish me-2"></i> Fish Species Guide</a></li>
              <li><a class="dropdown-item" href="/admin/fish-species/add"><i class="fas fa-plus me-2"></i> Add Fish Species</a></li>
            <li><a class="dropdown-item" href="/audit/logs"><i class="fas fa-history me-2"></i> Audit Logs & Activity</a></li>
              <li><a class="dropdown-item" href="/climateLoss/admin/analysis"><i class="fas fa-cloud-sun me-2"></i> Climate Event Analysis</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><i class="fas fa-user me-1"></i> Welcome, <%= user.name %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Logout Confirmation Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to log out?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <div class="main-container">
    <!-- Summary Cards -->
    <div class="section-header">
      <i class="fas fa-tachometer-alt"></i> Dashboard Overview
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <i class="fas fa-file-alt card-icon"></i>
            <div class="card-content">
              <h5>Total Reports</h5>
              <p class="status-total" id="totalReports">Loading...</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <i class="fas fa-check-circle card-icon status-approved"></i>
            <div class="card-content">
              <h5>Approved Reports</h5>
              <p class="status-approved" id="approvedReports">Loading...</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <i class="fas fa-exclamation-triangle card-icon status-flagged"></i>
            <div class="card-content">
              <h5>Flagged Reports</h5>
              <p class="status-flagged" id="flaggedReports">Loading...</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Analytics Section -->
    <div class="section-header">
      <i class="fas fa-chart-bar"></i> Analytics
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <div class="col">
        <div class="chart-container">
          <h5>Species Distribution</h5>
          <canvas id="speciesChart"></canvas>
        </div>
      </div>
      <div class="col">
        <div class="chart-container">
          <h5>Report Status</h5>
          <canvas id="statusChart"></canvas>
        </div>
      </div>
      <div class="col">
        <div class="chart-container">
          <h5>Daily Reports</h5>
          <canvas id="dailyChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Store chart instances in the window object to avoid redeclaration
    window.speciesChartInstance = window.speciesChartInstance || null;
    window.statusChartInstance = window.statusChartInstance || null;
    window.dailyChartInstance = window.dailyChartInstance || null;

    document.addEventListener("DOMContentLoaded", async () => {
      try {
        const response = await fetch("/analytics");
        if (!response.ok) {
          throw new Error(`HTTP error! Status: ${response.status}`);
        }
        const data = await response.json();

        console.log("📊 Received Data:", data); // Debugging log

        if (!data) {
          throw new Error("Missing API response data");
        }

        // Update dashboard counters
        document.getElementById("totalReports").innerText = data.totalReports ?? "N/A";
        document.getElementById("approvedReports").innerText = data.approvedReports ?? "N/A";
        document.getElementById("flaggedReports").innerText = data.flaggedReports ?? "N/A";

        // Render charts
        renderCharts(data.speciesData, data.statusData, data.dailyReports);
      } catch (error) {
        console.error("❌ Error loading analytics data:", error);
      }
    });

    function renderCharts(speciesData, statusData, dailyReports) {
      const speciesLabels = speciesData.map(item => item.species);
      const speciesCounts = speciesData.map(item => item.count);

      const statusLabels = statusData.map(item => item.status);
      const statusCounts = statusData.map(item => item.count);

      const dailyLabels = dailyReports.map(item => item.report_date.split("T")[0]);
      const dailyCounts = dailyReports.map(item => item.count);

      // Destroy existing charts if they exist
      if (window.speciesChartInstance) window.speciesChartInstance.destroy();
      if (window.statusChartInstance) window.statusChartInstance.destroy();
      if (window.dailyChartInstance) window.dailyChartInstance.destroy();

      // Create new charts
      window.speciesChartInstance = new Chart(document.getElementById("speciesChart"), {
        type: "bar",
        data: {
          labels: speciesLabels,
          datasets: [{
            label: "Species",
            data: speciesCounts,
            backgroundColor: "rgba(59, 130, 246, 0.7)",
            borderColor: "rgba(59, 130, 246, 1)",
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: { beginAtZero: true, title: { display: true, text: 'Count', font: { family: 'Poppins', size: 12 } } }
          },
          plugins: {
            legend: { display: false }
          }
        }
      });

      window.statusChartInstance = new Chart(document.getElementById("statusChart"), {
        type: "pie",
        data: {
          labels: statusLabels,
          datasets: [{
            data: statusCounts,
            backgroundColor: ["rgba(16, 185, 129, 0.7)", "rgba(239, 68, 68, 0.7)", "rgba(234, 179, 8, 0.7)"],
            borderColor: "#ffffff",
            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { position: 'bottom', labels: { font: { family: 'Poppins', size: 12 } } }
          }
        }
      });

      window.dailyChartInstance = new Chart(document.getElementById("dailyChart"), {
        type: "line",
        data: {
          labels: dailyLabels,
          datasets: [{
            label: "Reports Over Time",
            data: dailyCounts,
            borderColor: "rgba(59, 130, 246, 0.8)",
            backgroundColor: "rgba(59, 130, 246, 0.2)",
            fill: true,
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: { beginAtZero: true, title: { display: true, text: 'Reports', font: { family: 'Poppins', size: 12 } } }
          },
          plugins: {
            legend: { labels: { font: { family: 'Poppins', size: 12 } } }
          }
        }
      });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>