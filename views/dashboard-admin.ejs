    :root {
      --primary: #1e3a8a; /* Deep navy */
      --accent: #3b82f6; /* Vibrant blue */
      --background: #f0f4ff; /* Light blue-gray */
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981; /* Green for success */
      --warning: #ef4444; /* Red for alerts */
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    /* Navbar */
.navbar {
  background-color: var(--primary);
  padding: 1rem 1.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.navbar-brand {
  font-weight: 600;
  font-size: 1.5rem;
  color: #fff !important;
}
.navbar .nav-link {
  color: #fff !important;
}

/* Sidebar */
.sidebar {
  position: fixed;
  top: 0px;
  left: 0;
  width: 250px;
  height: 100%;
  background-color: var(--card-bg);
  padding-top: 1rem;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.sidebar-logo img {
  max-width: 100%;
  height: auto;
}
.sidebar-logo {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

.sidebar .nav-link {
  color: var(--text);
  padding: 0.75rem 1rem;
}
.sidebar .sub-item {
  padding-left: 2.5rem;
  font-size: 0.9rem;
}

/* Default visible on desktop */
body {
  margin-left: 250px;
}

/* Hide sidebar on mobile */
@media (max-width: 991px) {
  .sidebar {
    transform: translateX(-100%);
  }
  body {
    margin-left: 0;
  }
  .sidebar.active {
    transform: translateX(0);
    z-index: 1050;
  }
}


    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    /* Cards */
    .card {
      background-color: var(--card-bg);
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    .card-body {
      padding: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .card-icon {
      font-size: 2rem;
      color: var(--accent);
      background-color: rgba(59, 130, 246, 0.1);
      padding: 0.75rem;
      border-radius: 8px;
    }
    .card-content h5 {
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--text);
      margin: 0;
    }
    .card-content p {
      font-size: 1.6rem;
      font-weight: 600;
      color: var(--primary);
      margin: 0;
    }
    .status-total { color: var(--primary); }
    .status-approved { color: var(--highlight); }
    .status-flagged { color: var(--warning); }

    /* Charts */
    .chart-container {
      background-color: var(--card-bg);
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      height: 360px;
      position: relative;
    }
    .chart-container h5 {
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--text);
      margin-bottom: 1rem;
    }
    canvas {
      width: 100% !important;
      height: 100% !important;
    }

    /* Modal */
    .modal-content {
      border-radius: 12px;
      border: none;
      overflow: hidden;
    }
    .modal-header {
      background-color: var(--primary);
      color: #ffffff;
      border-bottom: none;
      padding: 1rem 1.5rem;
    }
    .modal-body {
      padding: 1.5rem;
    }
    .modal-footer {
      border-top: none;
      padding: 1rem 1.5rem;
    }
    .btn-danger {
      background-color: var(--warning);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #dc2626;
    }
    .btn-secondary {
      background-color: #6b7280;
      border: none;
      border-radius: 6px;
      font-weight: 500;
    }
    .btn-secondary:hover {
      background-color: #4b5563;
    }

    /* Responsive Design */
