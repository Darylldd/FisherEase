      window.speciesChartInstance = new Chart(document.getElementById("speciesChart"), {
        type: "bar",
        data: {
          labels: speciesLabels,
          datasets: [{
            label: "Species",
            data: speciesCounts,
            backgroundColor: "rgba(59, 130, 246, 0.7)",
            borderColor: "rgba(59, 130, 246, 1)",
            borderWidth: 1
