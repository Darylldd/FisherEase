<script>
 // Ensure DOM is loaded before adding event listeners
  document.addEventListener('DOMContentLoaded', () => {
    window.addEventListener('beforeprint', () => {
      const inputs = document.querySelectorAll('#vesselRegistrationForm input, #vesselRegistrationForm select, #vesselRegistrationForm textarea');
      inputs.forEach(input => {
        input.setAttribute('disabled', 'true');
      });

      // Generate print content dynamically
      const printContent = document.createElement('div');
      printContent.className = 'form-container';
      printContent.innerHTML = `
