          .section-header { font-size: 16px; font-weight: bold; margin: 10px 0; }
          .signature { text-align: center; margin: 20px 0; }
          .signature img { max-width: 150px; height: auto; display: block; margin: 0 auto 5px; }
          .signature .name { font-size: 14px; }
        </style>
        <div class="sub-header">Republic of the Philippines</div>
        <div class="sub-header">Province of Oriental Mindoro</div>
        <div class="sub-header">Office of the City Mayor</div>
        <div class="sub-header">City of Calapan</div>
        <div class="header">FISHING VESSEL REGISTRATION</div>
        <table class="main-table">
                    <tr><th>FVR NO.</th><td>${document.getElementById('fvr_no')?.value || 'N/A'}</td></tr> 
          <tr><th>FISHERFOLK OWNER</th><td>${document.querySelector('#fisherfolk_id option:checked')?.text || 'N/A'}</td></tr>
          <tr><th>TYPE OF REGISTRATION</th><td>${document.getElementById('registration_type').value || 'N/A'}</td></tr>
          <tr><th>FISHING VESSEL NAME</th><td>${document.getElementById('fishing_vessel_name').value || 'N/A'}</td></tr>
          <tr><th>VESSEL TYPE</th><td>${document.getElementById('vessel_type').value || 'N/A'}</td></tr>
        </table>
        <div class="section-header">VESSEL DETAILS</div>
        <table class="main-table">
          <tr><th>BOAT BUILDER NAME</th><td>${document.getElementById('boat_builder_name').value || 'N/A'}</td></tr>
          <tr><th>PLACE BUILT</th><td>${document.getElementById('place_built').value || 'N/A'}</td></tr>
          <tr><th>YEAR BUILT</th><td>${document.getElementById('year_built').value || 'N/A'}</td></tr>
        </table>
        <div class="section-header">PREVIOUS DETAILS</div>
        <table class="main-table">
          <tr><th>PREVIOUS HOMEPORT</th><td>${document.getElementById('previous_homeport').value || 'N/A'}</td></tr>
