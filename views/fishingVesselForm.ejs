  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    :root {
      --primary: #1e3a8a; /* Deep navy */
      --accent: #3b82f6; /* Vibrant blue */
      --background: #f0f4ff; /* Light blue-gray */
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981; /* Green for success */
      --warning: #ef4444; /* Red for alerts */
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

      /* Navbar */
.navbar {
  background-color: var(--primary);
  padding: 1rem 1.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.navbar-brand {
  font-weight: 600;
  font-size: 1.5rem;
  color: #fff !important;
}
.navbar .nav-link {
  color: #fff !important;
}

/* Sidebar */
.sidebar {
  position: fixed;
  top: 0px;
  left: 0;
  width: 250px;
  height: 100%;
  background-color: var(--card-bg);
  padding-top: 1rem;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.sidebar-logo img {
  max-width: 100%;
  height: auto;
}
.sidebar-logo {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

.sidebar .nav-link {
  color: var(--text);
  padding: 0.75rem 1rem;
}
.sidebar .sub-item {
  padding-left: 2.5rem;
  font-size: 0.9rem;
}

/* Default visible on desktop */
body {
  margin-left: 250px;
}

/* Hide sidebar on mobile */
@media (max-width: 991px) {
  .sidebar {
    transform: translateX(-100%);
  }
  body {
    margin-left: 0;
  }
  .sidebar.active {
    transform: translateX(0);
    z-index: 1050;
  }
}
    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    /* Form Card */
    .card {
      background-color: var(--card-bg);
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    .card-body {
      padding: 2rem;
    }
    .form-label {
      font-weight: 500;
      color: var(--text);
      margin-bottom: 0.5rem;
    }
    .form-control, .form-select {
      border-radius: 8px;
      border: 1px solid var(--border);
      padding: 0.75rem;
      font-size: 0.95rem;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .form-control:focus, .form-select:focus {
      border-color: var(--accent);
      box-shadow: 0 0 5px rgba(59, 130, 246, 0.3);
      outline: none;
    }
    .btn-primary {
      background-color: var(--accent);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      padding: 0.75rem 1.5rem;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .btn-primary:hover {
      background-color: #2563eb;
      transform: translateY(-2px);
    }

    /* Print Button */
    .btn-print {
      background-color: var(--highlight);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      padding: 0.75rem 1.5rem;
      margin-left: 1rem;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .btn-print:hover {
      background-color: #059669;
      transform: translateY(-2px);
    }

    /* Modal */
    .modal-content {
      border-radius: 12px;
      border: none;
      overflow: hidden;
    }
    .modal-header {
      background-color: var(--primary);
      color: #ffffff;
      border-bottom: none;
      padding: 1rem 1.5rem;
    }
    .modal-body {
      padding: 1.5rem;
    }
    .modal-footer {
      border-top: none;
      padding: 1rem 1.5rem;
    }
    .btn-danger {
      background-color: var(--warning);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #dc2626;
    }
    .btn-secondary {
      background-color: #6b7280;
      border: none;
      border-radius: 6px;
      font-weight: 500;
    }
    .btn-secondary:hover {
      background-color: #4b5563;
    }

    /* Print-Specific Styles */
    @media print {
      body {
        margin: 0;
        padding: 0;
      }
      .navbar, .card, .btn-primary, .btn-print {
        display: none;
      }
      .form-container {
        width: 210mm;
        height: 297mm;
        margin: 0 auto;
        padding: 15mm;
        background-color: #E6E6FA;
        box-sizing: border-box;
      }
      .sub-header {
        font-size: 11px;
        text-align: center;
        margin-bottom: 3px;
      }
      .header {
        text-align: center;
        font-weight: 700;
        font-size: 14px;
        margin-bottom: 10px;
        text-transform: uppercase;
        background-color: #0000FF;
        color: #fff;
        padding: 3px 0;
      }
      .main-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 11px;
        border: 1px solid #0000FF;
        page-break-inside: avoid;
      }
      .main-table th,
      .main-table td {
        border: 1px solid #0000FF;
        padding: 4px;
        text-align: left;
        vertical-align: top;
      }
      .main-table th {
        background-color: #0000FF;
        color: #fff;
        font-weight: 600;
      }
      .section-header {
        font-weight: 500;
        font-size: 14px;
        margin: 10px 0;
        color: #0000FF;
        text-align: center;
      }
      .signature {
        margin-top: 20px;
        text-align: right;
        font-size: 12px;
      }
      .signature img {
        max-width: 150px;
        height: auto;
        vertical-align: middle;
        margin-left: 10px;
      }
      table {
        page-break-inside: avoid;
      }
      @page {
        size: A4;
        margin: 0;
      }
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .main-container {
        padding: 0 1rem;
      }
    }
    @media (max-width: 768px) {
      .navbar-brand {
        font-size: 1.3rem;
      }
      .nav-link {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
      }
      .section-header {
        font-size: 1.2rem;
      }
      .card-body {
        padding: 1.5rem;
      }
    }
    @media (max-width: 576px) {
      .main-container {
        margin: 1rem auto;
      }
      .section-header {
        font-size: 1.1rem;
      }
    }
  </style>
</head>
