<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Loss Reports - Fisheries Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    :root {
      --primary: #1e3a8a;
      --accent: #3b82f6;
      --background: #f0f4ff;
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981;
      --warning: #ef4444;
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    /* Navbar */
.navbar {
  background-color: var(--primary);
  padding: 1rem 1.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.navbar-brand {
  font-weight: 600;
  font-size: 1.5rem;
  color: #fff !important;
}
.navbar .nav-link {
  color: #fff !important;
}

/* Sidebar */
.sidebar {
  position: fixed;
  top: 0px;
  left: 0;
  width: 250px;
  height: 100%;
  background-color: var(--card-bg);
  padding-top: 1rem;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.sidebar-logo img {
  max-width: 100%;
  height: auto;
}
.sidebar-logo {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

.sidebar .nav-link {
  color: var(--text);
  padding: 0.75rem 1rem;
}
.sidebar .sub-item {
  padding-left: 2.5rem;
  font-size: 0.9rem;
}

/* Default visible on desktop */
body {
  margin-left: 250px;
}

/* Tablet & Mobile - hide sidebar until toggled */
@media (max-width: 991px) {
  .sidebar {
    transform: translateX(-100%);
  }
  .sidebar.active {
    transform: translateX(0);
    z-index: 1050;
  }
  body {
    margin-left: 0;
  }
}


    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    .table-container {
      background-color: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      padding: 1.5rem;
    }
    .table {
      margin-bottom: 0;
    }
    .table th, .table td {
      vertical-align: middle;
      font-size: 0.95rem;
    }
    .table img {
      max-width: 100px;
      height: auto;
      border-radius: 4px;
      transition: transform 0.3s ease;
      cursor: pointer;
    }
    .table img:hover {
      transform: scale(1.1);
    }
    .table thead {
      background-color: var(--primary);
      color: #ffffff;
    }
    .table-striped tbody tr:nth-of-type(odd) {
      background-color: rgba(59, 130, 246, 0.03);
    }
    .table-bordered {
      border: 1px solid var(--border);
    }
    .table td, .table th {
      border-color: var(--border);
    }
    .status-pending { color: #eab308; font-weight: 500; }
    .status-approved { color: var(--highlight); font-weight: 500; }
    .status-disapproved { color: var(--warning); font-weight: 500; }

    .modal-content {
      border-radius: 12px;
      border: none;
      overflow: hidden;
    }
    .modal-header {
      background-color: var(--primary);
      color: #ffffff;
      border-bottom: none;
      padding: 1rem 1.5rem;
    }
    .modal-body {
      padding: 1.5rem;
    }
    .modal-footer {
      border-top: none;
      padding: 1rem 1.5rem;
    }
    .btn-danger {
      background-color: var(--warning);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #dc2626;
    }
    .btn-secondary {
      background-color: #6b7280;
      border: none;
      border-radius: 6px;
      font-weight: 500;
    }
    .btn-secondary:hover {
      background-color: #4b5563;
    }

    .image-preview {
      max-width: 100%;
      max-height: 80vh;
      display: block;
      margin: 0 auto;
      border-radius: 8px;
    }

    @media (max-width: 1200px) {
      .main-container {
        padding: 0 1rem;
      }
      .table th, .table td {
        font-size: 0.9rem;
      }
    }
    @media (max-width: 768px) {
      .navbar-brand {
        font-size: 1.3rem;
      }
      .nav-link {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
      }
      .section-header {
        font-size: 1.2rem;
      }
      .table-container {
        padding: 1rem;
      }
      .table img {
        max-width: 80px;
      }
    }
    @media (max-width: 576px) {
      .main-container {
        margin: 1rem auto;
      }
      .section-header {
        font-size: 1.1rem;
      }
      .table th, .table td {
        font-size: 0.85rem;
      }
      .table img {
        max-width: 60px;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
<nav class="navbar navbar-expand-lg">
  <div class="container-fluid justify-content-between">

    <!-- Sidebar Toggle (Hamburger) -->
    <button class="btn btn-light d-lg-none" id="sidebarToggle">
  <i class="fas fa-bars"></i>
</button>

    <!-- Brand -->
    <a class="navbar-brand" href="/">Fisheries Management Office</a>

    <!-- Right side (Welcome + Logout) -->
    <ul class="navbar-nav flex-row align-items-center">
      <li class="nav-item me-3">
        <a class="nav-link" href="#"><i class="fas fa-user me-1"></i> Welcome, <%= user.name %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
          <i class="fas fa-sign-out-alt me-1"></i> Logout
        </a>
      </li>
    </ul>
  </div>
</nav>

<!-- Sidebar -->
<div class="sidebar">

  <!-- Sidebar Logo / Branding -->
  <div class="sidebar-logo text-center py-3">
    <a href="/dashboard/admin">
      <img src="/image/lugu.jpg" alt="Fisheries Management Office Logo" class="img-fluid" style="max-height: 100px;">
    </a>
  </div>

  <ul class="nav flex-column">
    <li class="nav-item">
      <a class="nav-link" href="/"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="collapse" href="#userTools" role="button" aria-expanded="false">
        <i class="fas fa-tools me-2"></i> User Tools
      </a>
      <div class="collapse" id="userTools">
        <ul class="list-unstyled ps-3">
          <li><a class="nav-link sub-item" href="/climateLoss/view"><i class="fas fa-cloud-sun me-2"></i> Post-Climate Event Loss Reporting</a></li>
          <li><a class="nav-link sub-item" href="/climateLoss/view/reports"><i class="fas fa-table me-2"></i> View Loss Reports</a></li>
          <li><a class="nav-link sub-item" href="/fishing-activity-list"><i class="fas fa-anchor me-2"></i> Fishing Activity Table</a></li>
          <li><a class="nav-link sub-item" href="/catch-report/predictions"><i class="fas fa-clock me-2"></i> Predict Best Catch Time</a></li>
          <li><a class="nav-link sub-item" href="/catch-report"><i class="fas fa-fish me-2"></i> Report Daily Catch</a></li>
          <li><a class="nav-link sub-item" href="/fishing-activity-tracking"><i class="fas fa-anchor me-2"></i> Log Fishing Activity</a></li>
          <li><a class="nav-link sub-item" href="/harvest/user-view"><i class="fas fa-chart-line me-2"></i> Harvest</a></li>
          <li><a class="nav-link sub-item" href="/harvest/add"><i class="fas fa-plus me-2"></i> Add Harvest</a></li>
          <li><a class="nav-link sub-item" href="/violation-history"><i class="fas fa-exclamation-triangle me-2"></i> My Violations</a></li>
          <li><a class="nav-link sub-item" href="/catch-report/history"><i class="fas fa-exclamation-triangle me-2"></i> My Catch History</a></li>
          <li><a class="nav-link sub-item" href="/catch-report/clusters"><i class="fas fa-map-marker-alt me-2"></i> View Clusters</a></li>
        </ul>
      </div>
    </li>
  </ul>
</div>

<!-- Logout Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Logout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">Are you sure you want to log out?</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
  </div>
</div>

  <div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-labelledby="imagePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="imagePreviewModalLabel">Proof Image</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <img id="previewImage" class="image-preview" src="" alt="Full-size Proof Image">
        </div>
      </div>
    </div>
  </div>

  <div class="main-container">
    <div class="section-header">
      <i class="fas fa-table"></i> Your Loss Reports
    </div>
    <div class="table-container">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Event Type</th>
            <th>Date</th>
            <th>Species Lost</th>
            <th>Loss (Kg)</th>
            <th>Loss Value</th>
            <th>Location</th>
            <th>Description</th>
            <th>Proof Image</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (lossReports && lossReports.length > 0) { %>
            <% lossReports.forEach(report => { %>
              <tr>
                <td><%= report.event_type %></td>
                <td><%= new Date(report.date).toLocaleDateString() %></td>
                <td><%= report.species_lost %></td>
                <td><%= report.estimated_loss_kg %></td>
                <td><%= report.estimated_loss_value %></td>
                <td><%= report.location %></td>
                <td><%= report.description %></td>
                <td>
                  <% if (report.image_path) { %>
                    <img src="<%= report.image_path %>" alt="Proof Image" data-bs-toggle="modal" data-bs-target="#imagePreviewModal" onclick="showImage('<%= report.image_path %>')">
                  <% } else { %>
                    No Image
                  <% } %>
                </td>
                <td class="status-<%= report.status.toLowerCase() %>"><%= report.status %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="9" class="text-center">No loss reports found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function showImage(src) {
      const previewImage = document.getElementById('previewImage');
      previewImage.src = src;
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");

    sidebarToggle.addEventListener("click", function() {
      sidebar.classList.toggle("active");
    });

    // Optional: Close sidebar when clicking outside (on mobile/tablet)
    document.addEventListener("click", function(e) {
      if (window.innerWidth <= 991 && 
          !sidebar.contains(e.target) && 
          !sidebarToggle.contains(e.target)) {
        sidebar.classList.remove("active");
      }
    });
  });
</script>
</body>
</html>