                <% violations.forEach((v, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= v.violation_type %></td>
                    <td><%= v.specific_violation %></td>
                    <td><%= v.location %></td>
                    <td><%= v.fines %></td>
                    <td><%= v.details %></td>
                    <td><%= v.status %></td>
                    <td><%= new Date(v.created_at).toLocaleDateString() %></td>
                  </tr>
