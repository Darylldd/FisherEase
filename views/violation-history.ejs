  <style>
    :root {
      --primary: #1e3a8a; /* Deep navy */
      --accent: #3b82f6; /* Vibrant blue */
      --background: #f0f4ff; /* Light blue-gray */
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981; /* Green for success */
      --warning: #ef4444; /* Red for alerts */
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    /* Navbar */
.navbar {
  background-color: var(--primary);
  padding: 1rem 1.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.navbar-brand {
  font-weight: 600;
  font-size: 1.5rem;
  color: #fff !important;
}
.navbar .nav-link {
  color: #fff !important;
}

/* Sidebar */
.sidebar {
  position: fixed;
  top: 0px;
  left: 0;
  width: 250px;
  height: 100%;
  background-color: var(--card-bg);
  padding-top: 1rem;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.sidebar-logo img {
  max-width: 100%;
  height: auto;
}
.sidebar-logo {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

.sidebar .nav-link {
  color: var(--text);
  padding: 0.75rem 1rem;
}
.sidebar .sub-item {
  padding-left: 2.5rem;
  font-size: 0.9rem;
}

/* Default visible on desktop */
body {
  margin-left: 250px;
}

/* Tablet & Mobile - hide sidebar until toggled */
@media (max-width: 991px) {
  .sidebar {
    transform: translateX(-100%);
  }
  .sidebar.active {
    transform: translateX(0);
    z-index: 1050;
  }
  body {
    margin-left: 0;
  }
}
    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    /* Card Styling */
    .card {
      background-color: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    .card-body {
      padding: 1.5rem;
    }

    /* Table Styling */
    .table {
      margin-bottom: 0;
    }
        .table {
            background-color: var(--card-bg);
            border-radius: 8px;
            overflow: hidden;
        }
        .table th {
            background-color: var(--primary);
            color: #ffffff;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 10px;
        }


    .table thead {
      background-color: var(--primary);
      color: #ffffff;
    }
    .table thead th {
      font-weight: 500;
      font-size: 0.95rem;
      padding: 0.75rem 1rem;
      border: none;
    }
    .table tbody tr {
      transition: background-color 0.3s ease;
    }
    .table tbody tr:hover {
      background-color: rgba(59, 130, 246, 0.05);
    }
    .table tbody td {
      font-size: 0.9rem;
      padding: 0.75rem 1rem;
      border-color: var(--border);
    }
    
    
    /* Pagination Styling */
    .pagination {
      margin-top: 1.5rem;
      justify-content: center;
    }
    .page-item.active .page-link {
      background-color: var(--accent);
      border-color: var(--accent);
      color: #ffffff;
    }
    .page-link {
      color: var(--primary);
      border-radius: 6px;
      margin: 0 3px;
      padding: 0.5rem 1rem;
      font-weight: 500;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .page-link:hover {
      background-color: var(--background);
      color: var(--accent);
      transform: translateY(-2px);
    }
    .page-item.disabled .page-link {
      color: #6b7280;
      cursor: not-allowed;
    }

   /* ✅ Responsive tweaks */
@media (max-width: 768px) {
  .pagination {
    display: flex;
    justify-content: center; /* ✅ center horizontally */
    flex-wrap: wrap;         /* ✅ allow multiple lines */
  }

  .page-link {
    padding: 0.4rem 0.8rem; /* smaller buttons */
    font-size: 0.9rem;
    margin: 2px;
  }
}

@media (max-width: 480px) {
  .pagination {
    display: flex;
    justify-content: center; /* ✅ keep centered on phones */
    flex-wrap: wrap;
  }

  .page-link {
    padding: 0.3rem 0.6rem; /* even smaller for phones */
    font-size: 0.8rem;
    margin: 2px;
  }
}





    /* Alert Styling */
    .alert {
      border-radius: 8px;
      font-size: 0.95rem;
      font-weight: 400;
      padding: 1rem;
      background-color: #e7f3ff;
      border: 1px solid var(--accent);
      color: var(--text);
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .main-container {
        padding: 0 1rem;
      }
    }
    @media (max-width: 768px) {
      .section-header {
        font-size: 1.2rem;
      }
      .card-body {
        padding: 1rem;
      }
      .table thead th,
      .table tbody td {
        font-size: 0.85rem;
        padding: 0.5rem;
      }
      .alert {
        font-size: 0.9rem;
        padding: 0.75rem;
      }
    }
    @media (max-width: 576px) {
      .main-container {
        margin: 1rem auto;
      }
      .section-header {
        font-size: 1.1rem;
      }
      .card-body {
        padding: 0.75rem;
      }
      .table {
        font-size: 0.8rem;
      }
      .table thead th,
      .table tbody td {
        padding: 0.4rem;
      }
      .alert {
        font-size: 0.85rem;
      }
    }
  </style>
</head>
