  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    // Client-side JavaScript for dynamic form field autofill
    const fisherfolkList = <%- JSON.stringify(fisherfolk) %>;
    const vesselList = <%- JSON.stringify(vessels) %>;
    const fisherfolkSelect = document.getElementById('fisherfolk_id');
    const addressInput = document.getElementById('address');
    const vesselSelect = document.getElementById('vesselId');
    const vesselTypeSelect = document.getElementById('vessel_type');
    const fishingVesselSelect = document.getElementById('fishing_vessel_id');
    const dateInput = document.getElementById('date');

    // Set current date in date field
    const today = new Date().toISOString().split('T')[0];
    dateInput.value = today;

    // Function to update form fields based on selected fisherfolk
    fisherfolkSelect.addEventListener('change', function () {
      const selectedFisherfolk = fisherfolkList.find(f => f.id === Number(this.value));
      if (selectedFisherfolk) {
        addressInput.value = selectedFisherfolk.address || '';
        vesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        fishingVesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        
        // Update vessel type based on selected vessel
        const selectedVessel = vesselList.find(v => v.id === Number(vesselSelect.value));
        if (selectedVessel && selectedVessel.vessel_type) {
          vesselTypeSelect.value = selectedVessel.vessel_type;
        } else {
          vesselTypeSelect.value = '';
        }
      } else {
        addressInput.value = '';
        vesselSelect.value = '';
        fishingVesselSelect.value = '';
        vesselTypeSelect.value = '';
      }
    });

    // Update vessel type and linked fishing vessel when vessel selection changes
    vesselSelect.addEventListener('change', function () {
      const selectedVessel = vesselList.find(v => v.id === Number(this.value));
      if (selectedVessel && selectedVessel.vessel_type) {
        vesselTypeSelect.value = selectedVessel.vessel_type;
        fishingVesselSelect.value = this.value; // Sync fishing_vessel_id with vesselId
      } else {
        vesselTypeSelect.value = '';
        fishingVesselSelect.value = '';
      }
    });

    // Initialize form state
    if (fisherfolkSelect.value) {
      const selectedFisherfolk = fisherfolkList.find(f => f.id === Number(fisherfolkSelect.value));
      if (selectedFisherfolk) {
        addressInput.value = selectedFisherfolk.address || '';
        vesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        fishingVesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        
        // Initialize vessel type
        const selectedVessel = vesselList.find(v => v.id === Number(vesselSelect.value));
        if (selectedVessel && selectedVessel.vessel_type) {
          vesselTypeSelect.value = selectedVessel.vessel_type;
        }
      }
    }

    // Disable form inputs during print to show values only
    window.addEventListener('beforeprint', () => {
      const inputs = document.querySelectorAll('#admeasurementForm input, #admeasurementForm select, #admeasurementForm textarea');
      inputs.forEach(input => {
        input.setAttribute('disabled', 'true');
      });
      // Generate print content dynamically
      const printContent = document.createElement('div');
      printContent.className = 'form-container';
      printContent.innerHTML = `
        <div class="header">CERTIFIED STANDARD ADMEASUREMENT FORM</div>
        <table class="main-table">
          <tr><th rowspan="2">ANNEX B. Certified Standard Admeasurement Form</th><td></td></tr>
          <tr><td></td></tr>
          <tr><th>Republic of the Philippines</th><td>Province of Oriental Mindoro</td></tr>
          <tr><th>Office of the City Mayor</th><td>City of Calapan</td></tr>
          <tr><th>FISHERIES MANAGEMENT OFFICE</th><td></td></tr>
          <tr><th>FVR No.</th><td>${document.getElementById('fvr_no').value || 'N/A'}</td></tr>
          <tr><th>DATE</th><td>${new Date(document.getElementById('date').value).toLocaleDateString('en-PH') || 'N/A'}</td></tr>
          <tr><th>NAME OF OWNER (Surname, First Name, M.I.)</th><td>${document.querySelector('#fisherfolk_id option:checked')?.text || 'N/A'}</td></tr>
          <tr><th>ADDRESS (No. of Street, Barangay, Municipality/City, Province)</th><td>${document.getElementById('address').value || 'N/A'}</td></tr>
          <tr><th>NAME OF FISHING VESSEL</th><td>${document.querySelector('#vesselId option:checked')?.text || 'N/A'}</td></tr>
          <tr><th>VESSEL TYPE</th><td>( ) Motorized   ( ) Non-motorized ${document.getElementById('vessel_type').value === 'Motorized' ? '(X) Motorized' : document.getElementById('vessel_type').value === 'Non-motorized' ? '(X) Non-motorized' : '' || 'N/A'}</td></tr>
        </table>
        <div class="section-header">FISHING VESSEL DIMENSIONS AND TONNAGES</div>
        <table class="main-table">
          <tr><th>LENGTH (METERS)</th><th>BREADTH (METERS)</th><th>DEPTH (METERS)</th></tr>
          <tr><td>${document.getElementById('length_meters').value || 'N/A'}</td><td>${document.getElementById('breadth_meters').value || 'N/A'}</td><td>${document.getElementById('depth_meters').value || 'N/A'}</td></tr>
          <tr><th>GROSS TONNAGE</th><th>NET TONNAGE</th><td></td></tr>
