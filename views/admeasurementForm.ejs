<div class="main-container">
  <div class="card">
    <div class="card-body">
      <form method="POST" action="/admeasurement-form" id="admeasurementForm">
        <div class="row g-3">
          <div class="col-md-6">
            <label for="fvr_no" class="form-label">FVR No:</label>
            <input type="text" id="fvr_no" name="fvr_no" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="date" class="form-label">Date:</label>
            <input type="date" id="date" name="date" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="fisherfolk_id" class="form-label">Owner (Fisherfolk)</label>
            <select id="fisherfolk_id" name="fisherfolk_id" class="form-select" required>
              <option value="">-- Select Owner --</option>
              <% fisherfolk.forEach(person => { %>
                <option value="<%= person.id %>"><%= person.fullname %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-6">
            <label for="vesselId" class="form-label">Vessel Name</label>
            <select id="vesselId" name="vesselId" class="form-select" required>
              <option value="">-- Select Vessel --</option>
              <% vessels.forEach(vessel => { %>
                <option value="<%= vessel.id %>"><%= vessel.fishing_vessel_name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-12">
            <label for="address" class="form-label">Address:</label>
            <input type="text" id="address" name="address" class="form-control" readonly>
          </div>
          <div class="col-md-6">
            <label for="vessel_type" class="form-label">Vessel Type:</label>
            <select id="vessel_type" name="vessel_type" class="form-select" required>
              <option value="">-- Select Vessel Type --</option>
              <option value="Motorized">Motorized</option>
              <option value="Non-motorized">Non-motorized</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="length_meters" class="form-label">Length (m):</label>
            <input type="number" id="length_meters" name="length_meters" step="0.01" min="0" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="breadth_meters" class="form-label">Breadth (m):</label>
            <input type="number" id="breadth_meters" name="breadth_meters" step="0.01" min="0" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="depth_meters" class="form-label">Depth (m):</label>
            <input type="number" id="depth_meters" name="depth_meters" step="0.01" min="0" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="gross_tonnage" class="form-label">Gross Tonnage:</label>
            <input type="number" id="gross_tonnage" name="gross_tonnage" step="0.01" min="0" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="net_tonnage" class="form-label">Net Tonnage:</label>
            <input type="number" id="net_tonnage" name="net_tonnage" step="0.01" min="0" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="engine_make" class="form-label">Engine Make:</label>
            <input type="text" id="engine_make" name="engine_make" class="form-control">
          </div>
          <div class="col-md-6">
            <label for="serial_number" class="form-label">Serial Number:</label>
            <input type="text" id="serial_number" name="serial_number" class="form-control">
          </div>
          <div class="col-md-6">
            <label for="horse_power" class="form-label">Horse Power:</label>
            <input type="number" id="horse_power" name="horse_power" min="0" class="form-control">
          </div>
          <div class="col-md-6">
            <label for="number_of_cylinders" class="form-label">No. of Cylinders:</label>
            <input type="number" id="number_of_cylinders" name="number_of_cylinders" min="0" class="form-control">
          </div>
          <div class="col-md-6">
            <label for="place_of_inspection" class="form-label">Place of Inspection:</label>
            <input type="text" id="place_of_inspection" name="place_of_inspection" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="date_of_inspection" class="form-label">Date of Inspection:</label>
            <input type="date" id="date_of_inspection" name="date_of_inspection" class="form-control" required>
          </div>
          <div class="col-12">
            <label for="remarks" class="form-label">Remarks:</label>
            <textarea id="remarks" name="remarks" class="form-control" rows="4"></textarea>
          </div>
          <div class="col-12">
            <label for="fishing_vessel_id" class="form-label">Linked Fishing Vessel:</label>
            <select id="fishing_vessel_id" name="fishing_vessel_id" class="form-select">
              <option value="">-- Select Vessel --</option>
              <% vessels.forEach(v => { %>
                <option value="<%= v.id %>"><%= v.fishing_vessel_name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i> Submit</button>
            <button type="button" class="btn btn-print" onclick="window.print()"><i class="fas fa-print me-2"></i> Print Form</button>
          </div>
        </div>
