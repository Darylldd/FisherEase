<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Existing lists from backend
    const fisherfolkList = <%- JSON.stringify(fisherfolk) %>;
    const vesselList = <%- JSON.stringify(vessels) %>;

    // Existing DOM elements
    const fisherfolkSelect = document.getElementById('fisherfolk_id');
    const addressInput = document.getElementById('address');
    const vesselSelect = document.getElementById('vesselId'); // make sure matches HTML id
    const vesselTypeSelect = document.getElementById('vessel_type');
    const fishingVesselSelect = document.getElementById('fishing_vessel_id');
    const dateInput = document.getElementById('date');
    const fvrNoSelect = document.getElementById('fvr_no'); // renamed for clarity

    // Set current date
    const today = new Date().toISOString().split('T')[0];
    dateInput.value = today;

    // üîπ New: Autofill from FVR No.
    fvrNoSelect.addEventListener('change', function () {
      const selectedFvrNo = this.value.trim().toLowerCase();

      console.log('Selected FVR No:', selectedFvrNo); // Debug log to console

      if (!selectedFvrNo) {
        fisherfolkSelect.value = '';
        addressInput.value = '';
        vesselSelect.value = '';
        fishingVesselSelect.value = '';
        vesselTypeSelect.value = '';
        return;
      }
      const matchedVessel = vesselList.find(v => v.fvr_no && v.fvr_no.toLowerCase() === selectedFvrNo);
      if (matchedVessel) {
        vesselSelect.value = String(matchedVessel.id);
        vesselTypeSelect.value = matchedVessel.vessel_type || '';
        fishingVesselSelect.value = String(matchedVessel.id);

        const matchedFisherfolk = fisherfolkList.find(f => f.id === Number(matchedVessel.fisherfolk_id));
        if (matchedFisherfolk) {
          fisherfolkSelect.value = String(matchedFisherfolk.id);
          addressInput.value = matchedFisherfolk.address || '';
        } else {
          fisherfolkSelect.value = '';
          addressInput.value = '';
        }
      } else {
        fisherfolkSelect.value = '';
        addressInput.value = '';
        vesselSelect.value = '';
        fishingVesselSelect.value = '';
        vesselTypeSelect.value = '';
        console.warn('No vessel matched FVR No:', selectedFvrNo);
      }
    });

    // Existing: Update form when fisherfolk changes
    fisherfolkSelect.addEventListener('change', function () {
      const selectedFisherfolk = fisherfolkList.find(f => f.id === Number(this.value));
      if (selectedFisherfolk) {
        addressInput.value = selectedFisherfolk.address || '';
        vesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        fishingVesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        const selectedVessel = vesselList.find(v => v.id === Number(vesselSelect.value));
        vesselTypeSelect.value = selectedVessel?.vessel_type || '';
      } else {
        addressInput.value = '';
        vesselSelect.value = '';
        fishingVesselSelect.value = '';
        vesselTypeSelect.value = '';
      }
    });

    // Existing: Update vessel type on vessel change
    vesselSelect.addEventListener('change', function () {
      const selectedVessel = vesselList.find(v => v.id === Number(this.value));
      if (selectedVessel) {
        vesselTypeSelect.value = selectedVessel.vessel_type || '';
        fishingVesselSelect.value = this.value;
      } else {
        vesselTypeSelect.value = '';
        fishingVesselSelect.value = '';
      }
    });

    // Existing: Initialize form state
    if (fisherfolkSelect.value) {
      const selectedFisherfolk = fisherfolkList.find(f => f.id === Number(fisherfolkSelect.value));
      if (selectedFisherfolk) {
        addressInput.value = selectedFisherfolk.address || '';
        vesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        fishingVesselSelect.value = selectedFisherfolk.vessel_id ? String(selectedFisherfolk.vessel_id) : '';
        const selectedVessel = vesselList.find(v => v.id === Number(vesselSelect.value));
        vesselTypeSelect.value = selectedVessel?.vessel_type || '';
      }
    }

    // Disable form inputs during print to show values only
    window.addEventListener('beforeprint', () => {
      const inputs = document.querySelectorAll('#admeasurementForm input, #admeasurementForm select, #admeasurementForm textarea');
      inputs.forEach(input => input.setAttribute('disabled', 'true'));

      const blue = '#004fa3';
      function check(val, expected) {
        return val === expected ? "‚òë" : "‚òê";
      }

      const printContent = document.createElement('div');
      printContent.className = 'form-container';
      printContent.innerHTML = `
        <style>
          .official-form {
            font-family: Arial, sans-serif;
            color: ${blue};
            font-size: 12px;
            border: 2px solid ${blue};
            padding: 10px;
          }
          .center { text-align: center; }
          .bold { font-weight: bold; }
