        color: #0000FF;
        text-align: center;
      }
      .signature {
        margin-top: 10px;
        text-align: right;
        font-size: 10px;
      }
      table {
        page-break-inside: avoid;
      }
      @page {
        size: A4;
        margin: 0;
      }
    }

    /* Responsive Design for Screen */
    @media (max-width: 1200px) {
      .main-container {
