    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Form Card */
    .card {
      background-color: var(--card-bg);
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    .card-body {
      padding: 2rem;
    }
    .form-label {
      font-weight: 500;
      color: var(--text);
      margin-bottom: 0.5rem;
    }
    .form-control, .form-select {
      border-radius: 8px;
      border: 1px solid var(--border);
      padding: 0.75rem;
      font-size: 0.95rem;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .form-control:focus, .form-select:focus {
      border-color: var(--accent);
      box-shadow: 0 0 5px rgba(59, 130, 246, 0.3);
      outline: none;
    }
    .form-control[readonly] {
      background-color: #f3f4f6;
      cursor: not-allowed;
    }
    .btn-primary {
      background-color: var(--accent);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      padding: 0.75rem 1.5rem;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .btn-primary:hover {
      background-color: #2563eb;
      transform: translateY(-2px);
    }

    /* Print Button */
    .btn-print {
      background-color: var(--highlight);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      padding: 0.75rem 1.5rem;
      margin-left: 1rem;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .btn-print:hover {
      background-color: #059669;
      transform: translateY(-2px);
    }

    /* Modal */
    .modal-content {
      border-radius: 12px;
      border: none;
      overflow: hidden;
    }
    .modal-header {
      background-color: var(--primary);
      color: #ffffff;
      border-bottom: none;
      padding: 1rem 1.5rem;
    }
    .modal-body {
      padding: 1.5rem;
    }
    .modal-footer {
      border-top: none;
      padding: 1rem 1.5rem;
    }
    .btn-danger {
      background-color: var(--warning);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #dc2626;
    }
    .btn-secondary {
      background-color: #6b7280;
      border: none;
      border-radius: 6px;
      font-weight: 500;
    }
    .btn-secondary:hover {
      background-color: #4b5563;
    }

    /* Print-Specific Styles */
    @media print {
      body {
        margin: 0;
        padding: 0;
      }
      .navbar, .card, .btn-primary, .btn-print {
        display: none;
      }
      .form-container {
        border: none;
        width: 210mm;
        height: 297mm;
        margin: 0 auto;
        padding: 10mm;
        background-color: #E6E6FA;
        box-sizing: border-box;
      }
      .header {
        text-align: center;
        font-weight: bold;
        font-size: 14px;
        margin-bottom: 5px;
        text-transform: uppercase;
        background-color: #0000FF;
        color: #fff;
        padding: 3px 0;
      }
      .main-table {
        width: 100%;
