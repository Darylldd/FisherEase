</div>

  <div class="container mt-4">
    <h1>Fishing Activity Tracking</h1>
    <!-- Filter and Sorting Form -->
    <form method="GET" action="/fishing-activity-tracking" class="mb-4">
      <div class="row">
        <div class="col-md-4">
          <label for="date" class="form-label">Date</label>
          <input type="date" id="date" name="date" class="form-control" value="<%= filters.date %>">
        </div>
        <div class="col-md-4">
          <label for="location" class="form-label">Location</label>
          <input type="text" id="location" name="location" class="form-control" placeholder="Enter location" value="<%= filters.location %>">
        </div>
        <div class="col-md-4">
          <label for="activity" class="form-label">Activity</label>
          <input type="text" id="activity" name="activity" class="form-control" placeholder="Enter activity" value="<%= filters.activity %>">
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-4">
          <label for="sortBy" class="form-label">Sort By</label>
          <select id="sortBy" name="sortBy" class="form-select">
            <option value="date" <%= filters.sortBy === 'date' ? 'selected' : '' %>>Date</option>
            <option value="time" <%= filters.sortBy === 'time' ? 'selected' : '' %>>Time</option>
            <option value="location" <%= filters.sortBy === 'location' ? 'selected' : '' %>>Location</option>            
          </select>
        </div>
        <div class="col-md-4 align-self-end">
          <button type="submit" class="btn btn-primary">Apply Filters</button>
        </div>
      </div>
    </form>
 <!-- Fishing Activity Table -->
<div class="card mt-4">
  <div class="card-header">Fishing Activity Logs</div>
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Trip Duration (Minutes)</th>
          <th>Location</th>
          <th>Method</th>
          <th>Weather</th>
        </tr>
      </thead>
      <tbody>
        <% if (activities.length > 0) { %>
          <% activities.forEach((activity, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= activity.date %></td>
              <td><%= activity.start_time %></td>
              <td><%= activity.end_time %></td>
              <td><%= activity.trip_duration %></td>
              <td><%= activity.location %></td>
              <td><%= activity.method %></td>
              <td><%= activity.weather %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="8" class="text-center">No fishing activities recorded.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
