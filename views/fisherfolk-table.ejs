    <style>
        :root {
            --primary: #1e3a8a;
            --accent: #3b82f6;
            --background: #f0f4ff;
            --card-bg: #ffffff;
            --text: #1f2937;
            --border: #d1d5db;
            --highlight: #10b981;
            --warning: #ef4444;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--background);
            color: var(--text);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .navbar {
            background-color: var(--primary);
            padding: 1rem 1.5rem;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
            color: #ffffff !important;
            letter-spacing: 0.5px;
        }

        .nav-link {
            color: #ffffff !important;
            font-weight: 400;
            font-size: 0.95rem;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .nav-link:hover {
            background-color: var(--accent);
            transform: translateY(-1px);
        }

        .dropdown-menu {
            background-color: var(--card-bg);
            border: none;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            margin-top: 0.75rem;
            padding: 0.5rem 0;
        }

        .dropdown-item {
            color: var(--text);
            font-weight: 400;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            margin: 0 0.5rem;
        }

        .dropdown-item:hover {
            background-color: var(--background);
            color: var(--accent);
        }

        .dropdown-item i {
            width: 24px;
            text-align: center;
        }

        .main-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .table-section {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            background-color: var(--card-bg);
            border-radius: 8px;
            overflow: hidden;
            min-width: 1000px;
        }

        .table th, .table td {
            vertical-align: middle;
            border-color: var(--border);
            white-space: nowrap;
        }

        .table th {
            background-color: var(--primary);
            color: #ffffff;
            font-weight: 500;
            text-align: center;
        }

        .table td {
            text-align: center;
        }

        .search-bar {
            margin-bottom: 1rem;
            width: 100%;
            max-width: 300px;
        }

        .export-buttons {
            margin-bottom: 1rem;
        }

        .btn-export {
            margin-right: 0.5rem;
            background-color: var(--highlight);
            border: none;
            border-radius: 6px;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

        .btn-export:hover {
            background-color: #059669;
        }

        @media (max-width: 768px) {
            .table {
                font-size: 0.85rem;
                min-width: 800px;
            }
            .table th, .table td {
                padding: 0.4rem;
            }
            .table th {
                font-size: 0.9rem;
            }
            @media (max-width: 576px) {
                .table {
                    display: block;
                    overflow-x: auto;
                    min-width: 600px;
                }
                .table thead {
                    display: none;
                }
                .table tr {
                    display: block;
                    margin-bottom: 1rem;
                    border: 1px solid var(--border);
                    border-radius: 4px;
                }
                .table td {
                    display: block;
                    text-align: left;
                    padding: 0.5rem;
                    font-size: 0.8rem;
                }
                .table td:before {
                    content: attr(data-label);
                    font-weight: 600;
                    margin-right: 0.5rem;
                    color: var(--primary);
                }
                .table td[data-label] {
                    padding-left: 30%;
                }
                .search-bar {
                    max-width: 100%;
                }
            }
        }
    </style>
</head>
<body>
