    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let rowsPerPage = 5; // Default rows per page
            let currentPage = 1;
            const rows = document.querySelectorAll('#fisherfolkTableBody tr');
            const totalRows = rows.length;

            function updatePagination() {
                const totalPages = Math.ceil(totalRows / rowsPerPage);
                const pagination = document.querySelector('.pagination');
                const prevPage = document.querySelector('#prevPage');
                const nextPage = document.querySelector('#nextPage');

                document.querySelectorAll('.page-number').forEach(item => item.remove());

                for (let i = 1; i <= totalPages; i++) {
                    const li = document.createElement('li');
                    li.classList.add('page-item', 'page-number');
                    if (i === currentPage) li.classList.add('active');
                    
                    const a = document.createElement('a');
                    a.classList.add('page-link');
                    a.href = '#';
                    a.textContent = i;
                    a.addEventListener('click', (e) => {
                        e.preventDefault();
                        currentPage = i;
                        updateTable();
                        updatePagination();
                    });

                    li.appendChild(a);
                    pagination.insertBefore(li, nextPage);
                }

                prevPage.classList.toggle('disabled', currentPage === 1);
                nextPage.classList.toggle('disabled', currentPage === totalPages);
            }

            function updateTable() {
                rows.forEach((row, index) => {
                    const page = Math.floor(index / rowsPerPage) + 1;
                    row.setAttribute('data-page', page);
                    row.style.display = page === currentPage ? '' : 'none';
                });
            }

            document.querySelector('#prevPage').addEventListener('click', (e) => {
                e.preventDefault();
                if (currentPage > 1) {
                    currentPage--;
                    updateTable();
                    updatePagination();
                }
            });

            document.querySelector('#nextPage').addEventListener('click', (e) => {
                e.preventDefault();
                if (currentPage < Math.ceil(totalRows / rowsPerPage)) {
                    currentPage++;
                    updateTable();
                    updatePagination();
                }
            });

            document.getElementById('rowsPerPage').addEventListener('change', function() {
                rowsPerPage = parseInt(this.value);
                currentPage = 1;
                updateTable();
                updatePagination();
            });

            document.getElementById('searchInput').addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const page = parseInt(row.getAttribute('data-page'));
                    row.style.display = text.includes(searchTerm) && page === currentPage ? '' : 'none';
                });
            });

            document.getElementById('exportPdf').addEventListener('click', function() {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                const table = document.getElementById('fisherfolkTable');
                const headers = Array.from(table.querySelectorAll('th')).map(th => th.textContent);
                const rows = Array.from(table.querySelectorAll('tbody tr')).map(tr => 
                    Array.from(tr.querySelectorAll('td')).map(td => td.textContent)
                );

                doc.autoTable({
                    head: [headers],
                    body: rows,
                    startY: 20,
                    styles: { overflow: 'linebreak', cellWidth: 'auto' },
                    columnStyles: { 0: { cellWidth: 20 }, 1: { cellWidth: 30 } }
                });
                doc.save('fisherfolk_table.pdf');
            });

      document.getElementById('exportExcel').addEventListener('click', function () {
    const table = document.getElementById('fisherfolkTable');

    // Clone the table so we don't modify the original
    const clonedTable = table.cloneNode(true);

    // Remove "Actions" column from header
    clonedTable.querySelectorAll('thead tr').forEach(tr => {
        tr.deleteCell(tr.cells.length - 1);
    });

    // Remove "Actions" column from body
    clonedTable.querySelectorAll('tbody tr').forEach(tr => {
        tr.deleteCell(tr.cells.length - 1);
    });

    // Convert the modified table to workbook
    const wb = XLSX.utils.table_to_book(clonedTable, { sheet: 'Fisherfolk' });
    XLSX.writeFile(wb, 'fisherfolk_table.xlsx');
});

            if (totalRows > 0) {
                updateTable();
                updatePagination();
            }
        });
    </script>

