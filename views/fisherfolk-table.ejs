        .table-section h2 i {
            color: var(--accent);
        }

        /* Table */
        .table-responsive {
            margin-top: 1.5rem;
        }
        .table {
            background-color: var(--card-bg);
            border-radius: 8px;
            overflow: hidden;
           
        }
        .table th {
            background-color: var(--primary);
            color: #ffffff;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 5px;
