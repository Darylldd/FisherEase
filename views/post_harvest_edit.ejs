<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Post-Harvest Record - Fisheries Management</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body { font-family: 'Poppins', sans-serif; background-color: #f0f4ff; margin:0; }
    .navbar { background-color: #1e3a8a; }
    .navbar .nav-link, .navbar-brand { color: #fff; }
    .sidebar { width: 250px; position: fixed; top:0; left:0; height:100%; background:#fff; padding-top:1rem; overflow-y:auto; box-shadow:2px 0 5px rgba(0,0,0,0.1);}
    .sidebar .nav-link { color:#1f2937; padding:0.75rem 1rem; }
    body { margin-left:250px; }
    @media(max-width:991px){ body{margin-left:0;} .sidebar{transform:translateX(-100%);} .sidebar.active{transform:translateX(0);} }
    .main-container{max-width:1200px;margin:2rem auto;padding:0 1rem;}
    .card{border-radius:12px; box-shadow:0 4px 20px rgba(0,0,0,0.05);}
    .card-header{background:#1e3a8a;color:#fff;font-size:1.25rem;font-weight:500;border-radius:12px 12px 0 0;}
    .card-body{padding:2rem;}
    .btn-aquaculture{background-color:#3b82f6;color:#fff;border-radius:6px;}
    .btn-aquaculture:hover{background-color:#2563eb;}
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <button class="btn btn-light d-lg-none" id="sidebarToggle"><i class="fas fa-bars"></i></button>
      <a class="navbar-brand ms-2" href="#">Fisheries Management Office</a>
      <ul class="navbar-nav flex-row align-items-center">
        <li class="nav-item me-3"><a class="nav-link"><i class="fas fa-user me-1"></i> Welcome, <%= user.name %></a></li>
        <li class="nav-item"><a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal"><i class="fas fa-sign-out-alt me-1"></i> Logout</a></li>
      </ul>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="sidebar-logo text-center py-3">
      <a href="/dashboard/admin"><img src="/image/lugu.jpg" alt="Logo" style="max-height:100px;"></a>
    </div>
    <ul class="nav flex-column">
      <li class="nav-item"><a class="nav-link" href="/dashboard/admin"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a></li>
      <li class="nav-item"><a class="nav-link" href="/admin/post-harvest"><i class="fas fa-fish me-2"></i> Post-Harvest Table</a></li>
    </ul>
  </div>

  <!-- Logout Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog"><div class="modal-content">
      <div class="modal-header"><h5 class="modal-title">Confirm Logout</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
      <div class="modal-body">Are you sure you want to log out?</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div></div>
  </div>

  <!-- Main Content -->
  <div class="main-container">
    <div class="card">
      <div class="card-header"><i class="fas fa-edit me-2"></i>Edit Post-Harvest Record</div>
      <div class="card-body">
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form action="/admin/post-harvest/update" method="POST">
          <input type="hidden" name="id" value="<%= record.id %>">

          <div class="mb-3">
            <label class="form-label">License Number</label>
            <input type="text" name="license_number" class="form-control" value="<%= record.license_number %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Date Registered</label>
            <input type="date" name="date_registered" class="form-control" value="<%= new Date(record.date_registered).toISOString().split('T')[0] %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" name="first_name" class="form-control" value="<%= record.first_name %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Middle Name</label>
            <input type="text" name="middle_name" class="form-control" value="<%= record.middle_name || '' %>">
          </div>

          <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" name="last_name" class="form-control" value="<%= record.last_name %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" name="address" class="form-control" value="<%= record.address %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Contact Info</label>
            <input type="text" name="contact_info" class="form-control" value="<%= record.contact_info %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Processing Method</label>
            <input type="text" name="processing_method" class="form-control" value="<%= record.processing_method %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Processing Location</label>
            <input type="text" name="processing_location" class="form-control" value="<%= record.processing_location %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Civil Status</label>
            <select name="civil_status" class="form-select" required>
              <option value="Single" <%= record.civil_status === 'Single' ? 'selected' : '' %>>Single</option>
              <option value="Married" <%= record.civil_status === 'Married' ? 'selected' : '' %>>Married</option>
              <option value="Widowed" <%= record.civil_status === 'Widowed' ? 'selected' : '' %>>Widowed</option>
              <option value="Divorced" <%= record.civil_status === 'Divorced' ? 'selected' : '' %>>Divorced</option>
            </select>
          </div>

          <div class="mt-4 d-flex justify-content-between">
            <a href="/admin/post-harvest" class="btn btn-aquaculture"><i class="fas fa-arrow-left me-2"></i>Back</a>
            <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i>Update Record</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");
    sidebarToggle?.addEventListener("click", () => sidebar.classList.toggle("active"));
  </script>
</body>
</html>
