    <div class="container mt-4 con">
        <h2>Aquaculture Facility Registration</h2>
        <form action="/aquaculture/register" method="POST">
            <div class="mb-3">
                <label class="form-label">Facility Name</label>
                <input type="text" class="form-control" name="facility_name" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Owner's Name</label>
                <input type="text" class="form-control" name="owner" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Contact Info</label>
                <input type="text" class="form-control" name="contact_info" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Location</label>
                <input type="text" class="form-control" name="location" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Fish Species Being Raised</label>
                <input type="text" class="form-control" name="species" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Production Capacity</label>
                <input type="text" class="form-control" name="capacity" required>
            </div>
          
           
            <button type="submit" class="btn btn-success">Register</button>
        </form>
    </div>
