  <div class="main-container">
    <div class="section-header">
      <i class="fas fa-fish"></i> Fishing Stock Clusters
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> <%= error %>
      </div>
    <% } %>

    <div class="card">
      <div class="card-header">
        <h3><i class="fas fa-map-marked-alt"></i> Cluster Map</h3>
      </div>
      <div class="card-body">
        <div id="clusterMap"></div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h3><i class="fas fa-chart-bar"></i> Cluster Analysis</h3>
          </div>
          <div class="card-body">
            <div class="chart-container">
              <canvas id="clusterChart"></canvas>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card">
          <div class="card-header">
            <h3><i class="fas fa-info-circle"></i> Cluster Summary</h3>
          </div>
          <div class="card-body">
            <% if (clusters.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Cluster</th>
                      <th>Avg Catch</th>
                      <th>Reports</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% clusters.forEach(cluster => { %>
                      <tr>
                        <td>
                          <span class="badge cluster-badge-<%= (cluster.cluster_number % 3) + 1 %>">
                            Cluster <%= cluster.cluster_number + 1 %>
                          </span>
                        </td>
                        <td><%= (typeof cluster.average_quantity === 'number' ? cluster.average_quantity.toFixed(2) : '0.00') %> kg</td>
                        <td><%= cluster.report_count || 0 %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <p class="text-muted mt-3">
                <small>
                  <i class="fas fa-lightbulb"></i> Clusters help identify productive fishing areas.
                  Larger circles indicate higher average catch quantities.
                </small>
              </p>
            <% } else { %>
              <p class="text-center text-muted">No clusters available. Check your reports for valid locations.</p>
            <% } %>
          </div>
        </div>

        <% if (clusters.length > 0) { %>
          <div class="card">
            <div class="card-header">
              <h3><i class="fas fa-list"></i> Cluster Details</h3>
            </div>
            <div class="card-body">
              <% clusters.forEach(cluster => { %>
                <div class="card cluster-card mb-3 cluster-<%= (cluster.cluster_number % 3) + 1 %>">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <h5 class="card-title mb-0">
                        <span class="badge cluster-badge-<%= (cluster.cluster_number % 3) + 1 %> me-2">
                          Cluster <%= cluster.cluster_number + 1 %>
                        </span>
                        Avg Catch: <strong><%= (typeof cluster.average_quantity === 'number' ? cluster.average_quantity.toFixed(2) : '0.00') %> kg</strong>
                      </h5>
                      <small class="text-muted"><%= cluster.report_count || 0 %> reports</small>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <p class="mb-1">
                          <i class="fas fa-map-marker-alt text-danger"></i> 
                          <strong>Center Location:</strong> 
                          <%= (typeof cluster.center_latitude === 'number' ? cluster.center_latitude.toFixed(4) : '0.0000') %>°N, 
                          <%= (typeof cluster.center_longitude === 'number' ? cluster.center_longitude.toFixed(4) : '0.0000') %>°E
                        </p>
                        <p class="mb-1">
                          <i class="fas fa-fish text-primary"></i> 
                          <strong>Common Species:</strong> 
                          <%= cluster.species_list ? cluster.species_list.split(',').slice(0, 3).join(', ') : 'None' %>
                          <%= cluster.species_list && cluster.species_list.split(',').length > 3 ? '...' : '' %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <div class="table-responsive">
                          <table class="table table-sm">
                            <thead>
                              <tr>
                                <th>Recent Catches</th>
                                <th>Quantity</th>
                                <th>Date</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% cluster.reports.forEach(report => { %>
                                <tr>
                                  <td><%= report.species %></td>
                                  <td><%= (typeof report.quantity === 'number' ? report.quantity.toFixed(2) : '0.00') %> kg</td>
                                  <td><%= new Date(report.date).toLocaleDateString() %></td>
                                </tr>
                              <% }) %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } else { %>
          <div class="card">
            <div class="card-header">
              <h3><i class="fas fa-list"></i> Fallback Cluster Details</h3>
            </div>
            <div class="card-body">
              <p class="text-center text-muted">No valid clusters generated. Displaying fallback cluster at Manila Bay (14.5833°N, 120.9667°E) with all reports.</p>
              <% if (clusters.length > 0 && clusters[0].reports.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-sm">
                    <thead>
                      <tr>
                        <th>Species</th>
                        <th>Quantity</th>
                        <th>Date</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% clusters[0].reports.forEach(report => { %>
                        <tr>
                          <td><%= report.species %></td>
                          <td><%= (typeof report.quantity === 'number' ? report.quantity.toFixed(2) : '0.00') %> kg</td>
                          <td><%= new Date(report.date).toLocaleDateString() %></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <p class="text-center text-muted">No reports available for the fallback cluster.</p>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>console.log('Clusters:', <%- JSON.stringify(clusters, null, 2) %>);</script>

  <script>
    // Define clusterColors globally
    const clusterColors = ['#3b82f6', '#10b981', '#f59e0b'];

    document.addEventListener('DOMContentLoaded', function() {
      const map = L.map('clusterMap');
      const bounds = [];
      <% clusters.forEach(cluster => { %>
        bounds.push([<%= cluster.center_latitude %>, <%= cluster.center_longitude %>]);
      <% }) %>
      if (bounds.length > 0) {
        map.fitBounds(bounds, { padding: [50, 50] });
      } else {
        map.setView([14.5833, 120.9667], 6);
      }

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
        maxZoom: 19
      }).addTo(map);

      <% clusters.forEach(cluster => { %>
        L.circleMarker(
          [<%= cluster.center_latitude %>, <%= cluster.center_longitude %>], 
          {
            radius: <%= Math.max(Math.sqrt(typeof cluster.average_quantity === 'number' ? cluster.average_quantity : 0) * 2, 5) %>,
            fillColor: clusterColors[<%= cluster.cluster_number %> % clusterColors.length],
            color: '#fff',
            weight: 1,
            opacity: 1,
            fillOpacity: 0.8
          }
        ).addTo(map)
        .bindPopup(`
          <b>Cluster <%= cluster.cluster_number + 1 %></b><br>
          Avg Catch: <%= (typeof cluster.average_quantity === 'number' ? cluster.average_quantity.toFixed(2) : '0.00') %> kg<br>
          Reports: <%= cluster.report_count || 0 %><br>
          Species: <%= cluster.species_list ? cluster.species_list.split(',').slice(0, 3).join(', ') : 'None' %>
        `);
      <% }) %>

      const ctx = document.getElementById('clusterChart').getContext('2d');
      <% if (clusters.length > 0) { %>
        window.clusterChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: [
              <% clusters.forEach(cluster => { %>
                'Cluster <%= cluster.cluster_number + 1 %>',
              <% }) %>
            ],
            datasets: [{
              label: 'Average Catch (kg)',
              data: [
                <% clusters.forEach(cluster => { %>
                  <%= typeof cluster.average_quantity === 'number' ? cluster.average_quantity : 0 %>,
                <% }) %>
              ],
              backgroundColor: clusterColors,
              borderColor: clusterColors,
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { display: false },
              tooltip: {
                callbacks: {
                  label: function(context) {
                    return `Avg Catch: ${context.raw.toFixed(2)} kg`;
                  }
                }
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                title: { display: true, text: 'Kilograms', font: { family: 'Poppins' } },
                ticks: { font: { family: 'Poppins' } }
              },
              x: {
                ticks: { font: { family: 'Poppins' } }
              }
            }
          }
        });
      <% } else { %>
        ctx.font = '16px Poppins';
        ctx.fillStyle = '#6b7280';
        ctx.textAlign = 'center';
        ctx.fillText('No clusters available', ctx.canvas.width / 2, ctx.canvas.height / 2);
      <% } %>
    });
  </script>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");

    sidebarToggle.addEventListener("click", function() {
      sidebar.classList.toggle("active");
    });

    // Optional: Close sidebar when clicking outside (on mobile/tablet)
    document.addEventListener("click", function(e) {
      if (window.innerWidth <= 991 && 
          !sidebar.contains(e.target) && 
          !sidebarToggle.contains(e.target)) {
        sidebar.classList.remove("active");
      }
    });
  });
</script>
