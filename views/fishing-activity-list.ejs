<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Fishing Activities - Fisheries Management</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- jsPDF and autoTable for PDF export -->
  <script src="https://unpkg.com/jspdf@2.5.1/dist/jspdf.umd.min.js"></script>
  <script src="https://unpkg.com/jspdf-autotable@3.8.2/dist/jspdf.plugin.autotable.min.js"></script>
  <!-- SheetJS for Excel export -->
  <script src="https://unpkg.com/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
  <style>
    :root {
      --primary: #1e3a8a; /* Deep navy */
      --accent: #3b82f6; /* Vibrant blue */
      --background: #f0f4ff; /* Light blue-gray */
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #d1d5db;
      --highlight: #10b981; /* Green for success */
      --warning: #ef4444; /* Red for alerts */
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
      background-color: var(--background);
      color: var(--text);
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    /* Navbar */
.navbar {
  background-color: var(--primary);
  padding: 1rem 1.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.navbar-brand {
  font-weight: 600;
  font-size: 1.5rem;
  color: #fff !important;
}
.navbar .nav-link {
  color: #fff !important;
}

/* Sidebar */
.sidebar {
  position: fixed;
  top: 0px;
  left: 0;
  width: 250px;
  height: 100%;
  background-color: var(--card-bg);
  padding-top: 1rem;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.sidebar-logo img {
  max-width: 100%;
  height: auto;
}
.sidebar-logo {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

.sidebar .nav-link {
  color: var(--text);
  padding: 0.75rem 1rem;
}
.sidebar .sub-item {
  padding-left: 2.5rem;
  font-size: 0.9rem;
}

/* Default visible on desktop */
body {
  margin-left: 250px;
}

/* Tablet & Mobile - hide sidebar until toggled */
@media (max-width: 991px) {
  .sidebar {
    transform: translateX(-100%);
  }
  .sidebar.active {
    transform: translateX(0);
    z-index: 1050;
  }
  body {
    margin-left: 0;
  }
}


    /* Main Container */
    .main-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
      font-size: 1.4rem;
      font-weight: 500;
      color: var(--primary);
      margin: 2rem 0 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .section-header i {
      color: var(--accent);
    }

    /* Table Section */
    .table-section {
      background-color: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      padding: 1.5rem;
      max-width: 1200px;
      margin: 0 auto;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .table-section:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    /* Export Buttons */
    .export-buttons {
      margin-bottom: 1.5rem;
      display: flex;
      gap: 1rem;
    }
    .export-buttons button {
      padding: 0.75rem 1.5rem;
      background-color: var(--accent);
      border: none;
      border-radius: 8px;
      color: #ffffff;
      font-weight: 500;
      font-size: 0.95rem;
      font-family: 'Poppins', sans-serif;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .export-buttons button:hover {
      background-color: #2563eb;
      transform: translateY(-2px);
    }

    /* Table Styling */
    .activity-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.95rem;
    }
    .activity-table th,
    .activity-table td {
      border: 1px solid var(--border);
      padding: 0.75rem 1rem;
      text-align: left;
    }
    .activity-table th {
      background-color: #f9fafb;
      font-weight: 500;
      color: var(--primary);
    }
    .activity-table tr:nth-child(even) {
      background-color: #f9fafb;
    }
    .activity-table tr:hover {
      background-color: rgba(59, 130, 246, 0.05);
    }

    /* No Activities Message */
    .no-activities {
      font-style: italic;
      color: var(--text);
      font-size: 0.95rem;
      margin: 1.5rem 0;
    }

    /* Add Activity Link */
    .add-activity-link {
      display: inline-block;
      margin-top: 1.5rem;
      color: var(--accent);
      font-weight: 500;
      font-size: 0.95rem;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    .add-activity-link:hover {
      color: #2563eb;
      text-decoration: underline;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .main-container {
        padding: 0 1rem;
      }
      .table-section {
        max-width: 800px;
      }
    }
    @media (max-width: 768px) {
      .section-header {
        font-size: 1.2rem;
      }
      .table-section {
        padding: 1rem;
      }
      .activity-table th,
      .activity-table td {
        padding: 0.5rem;
        font-size: 0.9rem;
      }
      .export-buttons {
        flex-direction: column;
        align-items: flex-start;
      }
      .export-buttons button {
        width: 100%;
        text-align: center;
      }
    }
    @media (max-width: 576px) {
      .main-container {
        margin: 1rem auto;
      }
      .section-header {
        font-size: 1.1rem;
      }
      .activity-table {
        font-size: 0.85rem;
      }
      .export-buttons button {
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
      }
      .add-activity-link {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
<nav class="navbar navbar-expand-lg">
  <div class="container-fluid justify-content-between">

    <!-- Sidebar Toggle (Hamburger) -->
    <button class="btn btn-light d-lg-none" id="sidebarToggle">
  <i class="fas fa-bars"></i>
</button>

    <!-- Brand -->
    <a class="navbar-brand" href="/">Fisheries Management Office</a>

    <!-- Right side (Welcome + Logout) -->
    <ul class="navbar-nav flex-row align-items-center">
      <li class="nav-item me-3">
        <a class="nav-link" href="#"><i class="fas fa-user me-1"></i> Welcome, <%= user.name %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
          <i class="fas fa-sign-out-alt me-1"></i> Logout
        </a>
      </li>
    </ul>
  </div>
</nav>

<!-- Sidebar -->
<div class="sidebar">

  <!-- Sidebar Logo / Branding -->
  <div class="sidebar-logo text-center py-3">
    <a href="/dashboard/admin">
      <img src="/image/lugu.jpg" alt="Fisheries Management Office Logo" class="img-fluid" style="max-height: 100px;">
    </a>
  </div>

  <ul class="nav flex-column">
    <li class="nav-item">
      <a class="nav-link" href="/"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="collapse" href="#userTools" role="button" aria-expanded="false">
        <i class="fas fa-tools me-2"></i> User Tools
      </a>
      <div class="collapse" id="userTools">
        <ul class="list-unstyled ps-3">
          <li><a class="nav-link sub-item" href="/climateLoss/view"><i class="fas fa-cloud-sun me-2"></i> Post-Climate Event Loss Reporting</a></li>
          <li><a class="nav-link sub-item" href="/climateLoss/view/reports"><i class="fas fa-table me-2"></i> View Loss Reports</a></li>
          <li><a class="nav-link sub-item" href="/fishing-activity-list"><i class="fas fa-anchor me-2"></i> Fishing Activity Table</a></li>
          <li><a class="nav-link sub-item" href="/catch-report/predictions"><i class="fas fa-clock me-2"></i> Predict Best Catch Time</a></li>
          <li><a class="nav-link sub-item" href="/catch-report"><i class="fas fa-fish me-2"></i> Report Daily Catch</a></li>
          <li><a class="nav-link sub-item" href="/fishing-activity-tracking"><i class="fas fa-anchor me-2"></i> Log Fishing Activity</a></li>
          <li><a class="nav-link sub-item" href="/harvest/user-view"><i class="fas fa-chart-line me-2"></i> Harvest</a></li>
          <li><a class="nav-link sub-item" href="/harvest/add"><i class="fas fa-plus me-2"></i> Add Harvest</a></li>
          <li><a class="nav-link sub-item" href="/violation-history"><i class="fas fa-exclamation-triangle me-2"></i> My Violations</a></li>
          <li><a class="nav-link sub-item" href="/catch-report/history"><i class="fas fa-exclamation-triangle me-2"></i> My Catch History</a></li>
          <li><a class="nav-link sub-item" href="/catch-report/clusters"><i class="fas fa-map-marker-alt me-2"></i> View Clusters</a></li>
        </ul>
      </div>
    </li>
  </ul>
</div>

<!-- Logout Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Logout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">Are you sure you want to log out?</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
  </div>
</div>

  <div class="main-container">
    <!-- User's Fishing Activities Section -->
    <section class="table-section">
      <div class="section-header">
        <i class="fas fa-fish"></i> Your Fishing Activities
      </div>
      <% if (activities && activities.length > 0) { %>
        <div class="export-buttons">
          <button onclick="exportToPDF()">Export to PDF</button>
          <button onclick="exportToExcel()">Export to Excel</button>
        </div>
        <table id="activity-table" class="activity-table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Start Time</th>
              <th>End Time</th>
              <th>Location</th>
              <th>Method</th>
              <th>Weather</th>
            </tr>
          </thead>
          <tbody>
            <% activities.forEach(activity => { %>
              <tr>
                <td><%= new Date(activity.date).toLocaleDateString() %></td>
                <td><%= activity.start_time %></td>
                <td><%= activity.end_time %></td>
                <td><%= activity.location %></td>
                <td><%= activity.method %></td>
                <td><%= activity.weather %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="no-activities">No fishing activities recorded yet.</p>
      <% } %>
      <a href="/fishing-activity-tracking" class="add-activity-link">Add New Fishing Activity</a>
    </section>
  </div>

  <script>
    // PDF Export using jsPDF and autoTable
    function exportToPDF() {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();
      
      doc.setFontSize(18);
      doc.text('Your Fishing Activities', 14, 22);
      
      doc.autoTable({
        html: '#activity-table',
        startY: 30,
        theme: 'striped',
        headStyles: { fillColor: [30, 58, 138], textColor: [255, 255, 255] },
        styles: { fontSize: 10 },
        margin: { top: 30 }
      });
      
      doc.save('fishing_activities.pdf');
    }

    // Excel Export using SheetJS
    function exportToExcel() {
      const table = document.getElementById('activity-table');
      const workbook = XLSX.utils.table_to_book(table, { sheet: 'Fishing Activities' });
      XLSX.writeFile(workbook, 'fishing_activities.xlsx');
    }
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sidebarToggle = document.getElementById("sidebarToggle");
    const sidebar = document.querySelector(".sidebar");

    sidebarToggle.addEventListener("click", function() {
      sidebar.classList.toggle("active");
    });

    // Optional: Close sidebar when clicking outside (on mobile/tablet)
    document.addEventListener("click", function(e) {
      if (window.innerWidth <= 991 && 
          !sidebar.contains(e.target) && 
          !sidebarToggle.contains(e.target)) {
        sidebar.classList.remove("active");
      }
    });
  });
</script>

</body>
</html>