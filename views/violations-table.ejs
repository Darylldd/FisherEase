    <div class="main-container">
        <div class="violation-section">
            <h2><i class="fas fa-exclamation-triangle"></i> Violation Notification System</h2>

            <!-- Search Bar with Month/Year Filters -->
            <div class="search-container">
                <form action="/violations-table" method="GET" class="search-form">
                    <input type="text" name="search" class="form-control" placeholder="Search by user name, violation type, or status" value="<%= search || '' %>">
                    <select name="month" class="form-select">
                        <option value="" <%= !month ? 'selected' : '' %>>All Months</option>
                        <option value="1" <%= month == '1' ? 'selected' : '' %>>January</option>
                        <option value="2" <%= month == '2' ? 'selected' : '' %>>February</option>
                        <option value="3" <%= month == '3' ? 'selected' : '' %>>March</option>
                        <option value="4" <%= month == '4' ? 'selected' : '' %>>April</option>
                        <option value="5" <%= month == '5' ? 'selected' : '' %>>May</option>
                        <option value="6" <%= month == '6' ? 'selected' : '' %>>June</option>
                        <option value="7" <%= month == '7' ? 'selected' : '' %>>July</option>
                        <option value="8" <%= month == '8' ? 'selected' : '' %>>August</option>
                        <option value="9" <%= month == '9' ? 'selected' : '' %>>September</option>
                        <option value="10" <%= month == '10' ? 'selected' : '' %>>October</option>
                        <option value="11" <%= month == '11' ? 'selected' : '' %>>November</option>
                        <option value="12" <%= month == '12' ? 'selected' : '' %>>December</option>
                    </select>
                    <select name="year" class="form-select">
                        <option value="" <%= !year ? 'selected' : '' %>>All Years</option>
                        <% for (let y = new Date().getFullYear(); y >= 2000; y--) { %>
                            <option value="<%= y %>" <%= year == y ? 'selected' : '' %>><%= y %></option>
                        <% } %>
                    </select>
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a href="/violations-table" class="btn btn-secondary">Clear</a>
                </form>
            </div>

            <!-- Export Buttons -->
            <div class="export-buttons mb-3">
                <button onclick="exportToPDF()" class="btn btn-success me-2"><i class="fas fa-file-pdf"></i> Export to PDF</button>
                <button onclick="exportToExcel()" class="btn btn-success"><i class="fas fa-file-excel"></i> Export to Excel</button>
            </div>

            <!-- Violations Table -->
            <div class="table-container">
                <table class="table table-striped" id="violationsTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Violation Type</th>
                            <th>Specific Violation</th>
                            <th>Location/Barangay</th>
                            <th>Details</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (violations && violations.length) { %>
                            <% violations.forEach(violation => { %>
                                <tr data-date="<%= violation.created_at %>">
                                    <td><%= violation.id %></td>
                                    <td><%= violation.name %></td>
                                    <td><%= violation.violation_type %></td>
                                    <td><%= violation.specific_violation %></td>
                                    <td><%= violation.location %></td>
                                    <td><%= violation.details %></td>
                                    <td><%= new Date(violation.created_at).toLocaleDateString() %></td>
                                    <td><%= violation.status %></td>
                                    <td>
                                        <form action="/violation-notifications/update" method="POST" class="d-inline">
                                            <input type="hidden" name="id" value="<%= violation.id %>">
                                            <select name="status" class="form-select">
                                                <option value="Pending" <%= violation.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                                <option value="Reviewed" <%= violation.status === 'Reviewed' ? 'selected' : '' %>>Reviewed</option>
                                                <option value="Resolved" <%= violation.status === 'Resolved' ? 'selected' : '' %>>Resolved</option>
                                            </select>
                                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="9" class="no-violations">No violations found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
