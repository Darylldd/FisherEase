    <style>
        :root {
            --primary: #1e3a8a; /* Deep navy */
            --accent: #3b82f6; /* Vibrant blue */
            --background: #f0f4ff; /* Light blue-gray */
            --card-bg: #ffffff;
            --text: #1f2937;
            --border: #d1d5db;
            --highlight: #10b981; /* Green for success */
            --warning: #ef4444; /* Red for alerts */
        }

        body {
            font-family:  Arial, Helvetica, sans-serif;
            background-color: var(--background);
            color: var(--text);
            margin: 0;
            padding: 0;
        }

        /* Navbar */
.navbar {
  background-color: var(--primary);
  padding: 1rem 1.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.navbar-brand {
  font-weight: 600;
  font-size: 1.5rem;
  color: #fff !important;
}
.navbar .nav-link {
  color: #fff !important;
}

/* Sidebar */
.sidebar {
  position: fixed;
  top: 0px;
  left: 0;
  width: 250px;
  height: 100%;
  background-color: var(--card-bg);
  padding-top: 1rem;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.sidebar-logo img {
  max-width: 100%;
  height: auto;
}
.sidebar-logo {
  border-bottom: 1px solid rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

.sidebar .nav-link {
  color: var(--text);
  padding: 0.75rem 1rem;
}
.sidebar .sub-item {
  padding-left: 2.5rem;
  font-size: 0.9rem;
}

/* Default visible on desktop */
body {
  margin-left: 250px;
}

/* Hide sidebar on mobile */
@media (max-width: 991px) {
  .sidebar {
    transform: translateX(-100%);
  }
  body {
    margin-left: 0;
  }
  .sidebar.active {
    transform: translateX(0);
    z-index: 1050;
  }
}

        /* Main Container */
        .main-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        /* Violation Section */
        .violation-section {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            margin-bottom: 2rem;
        }
        .violation-section:hover {
            transform: translateY(-4px);
        }
        .violation-section h2 {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 1.5rem;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        .violation-section h2 i {
            color: var(--accent);
        }

        /* Search Bar */
        .search-container {
            margin-bottom: 1.5rem;
        }
        .search-form {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        .search-form .form-control,
        .search-form .form-select {
            flex: 1;
            min-width: 150px;
        }

        /* Table */
        .table-container {
            max-height: 400px;
            overflow-y: auto;
            border-radius: 8px;
        }
        .table {
            font-size: 0.9rem;
            margin-bottom: 0;
        }
        .table thead {
            background-color: var(--primary);
            color: #ffffff;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        .table th, .table td {
            padding: 0.75rem;
            vertical-align: middle;
            white-space: nowrap;
        }
        .table tbody tr {
            transition: background-color 0.3s ease;
        }
        .table tbody tr:hover {
            background-color: rgba(59, 130, 246, 0.05);
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.02);
        }
        .no-violations {
            text-align: center;
            padding: 1.5rem;
            color: #6b7280;
            font-size: 0.95rem;
        }

        /* Form Elements */
        .form-label {
            font-weight: 500;
            font-size: 0.95rem;
            color: var(--text);
        }
        .form-control,
        .form-select {
            border: 1px solid var(--border);
            border-radius: 6px;
            font-size: 0.9rem;
            padding: 0.5rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .form-control:focus,
        .form-select:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.1);
            outline: none;
        }
        .form-control::placeholder {
            color: #9ca3af;
        }
        .form-select {
            display: inline-block;
            width: auto;
            margin-right: 0.5rem;
        }
        .btn-primary {
            background-color: var(--accent);
            border: none;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .btn-primary:hover {
            background-color: #2563eb;
            transform: translateY(-2px);
        }
        .btn-success {
            background-color: var(--highlight);
            border: none;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .btn-success:hover {
            background-color: #059669;
            transform: translateY(-2px);
        }

        /* Modal */
        .modal-content {
            border-radius: 12px;
            border: none;
            overflow: hidden;
        }
        .modal-header {
            background-color: var(--primary);
            color: #ffffff;
            border-bottom: none;
            padding: 1rem 1.5rem;
        }
        .modal-body {
            padding: 1.5rem;
        }
        .modal-footer {
            border-top: none;
            padding: 1rem 1.5rem;
        }
        .btn-danger {
            background-color: var(--warning);
            border: none;
            border-radius: 6px;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }
        .btn-danger:hover {
            background-color: #dc2626;
        }
        .btn-secondary {
            background-color: #6b7280;
            border: none;
            border-radius: 6px;
            font-weight: 500;
        }
        .btn-secondary:hover {
            background-color: #4b5563;
        }

        /* Export Buttons */
        .export-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .main-container {
                padding: 0 1rem;
            }
            .table-container {
                max-height: 350px;
            }
        }
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.3rem;
            }
            .nav-link {
                font-size: 0.9rem;
                padding: 0.5rem 0.75rem;
            }
            .violation-section h2 {
                font-size: 1.5rem;
            }
            .violation-section {
                padding: 1.5rem;
            }
            .table-container {
                max-height: 300px;
            }
            .table th, .table td {
                padding: 0.5rem;
                font-size: 0.85rem;
            }
            .form-select {
                width: 100%;
                margin-bottom: 0.5rem;
            }
            .btn-primary,
            .btn-success {
                width: 100%;
            }
            .search-form .form-control,
            .search-form .form-select {
                min-width: 100%;
            }
        }
        @media (max-width: 576px) {
            .main-container {
                margin: 1rem auto;
            }
            .violation-section {
                padding: 1rem;
            }
            .violation-section h2 {
                font-size: 1.3rem;
            }
            .form-control,
            .form-select {
                font-size: 0.85rem;
            }
            .btn-primary,
            .btn-success {
                font-size: 0.85rem;
            }
            .table-container {
                max-height: 250px;
            }
            .table {
                font-size: 0.8rem;
            }
        }
    </style>
