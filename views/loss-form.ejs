<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Climate Loss</title>
    <style>
        .modal {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            max-width: 400px;
        }
    </style>
</head>
<body>
    <h1>Report Climate Event Loss</h1>
    <form action="/climateLoss/report" method="POST">
        <label>Event Type:</label>
        <select name="eventType" required>
            <option value="Storm">Storm</option>
            <option value="Typhoon">Typhoon</option>
            <option value="Flood">Flood</option>
            <option value="Red Tide">Red Tide</option>
        </select><br><br>

        <label>Date:</label>
        <input type="date" name="date" required><br><br>

        <label>Species Lost:</label>
        <input type="text" name="speciesLost" required><br><br>

        <label>Estimated Loss (Kg):</label>
        <input type="number" name="lossKg" step="0.01" required><br><br>

        <label>Estimated Loss Value:</label>
        <input type="number" name="lossValue" step="0.01" required><br><br>

        <label>Location:</label>
        <input type="text" name="location" required><br><br>

        <label>Description:</label><br>
        <textarea name="description" placeholder="Describe the loss" required></textarea><br><br>

        <button type="submit">Report Loss</button>
    </form>

    <!-- Modal -->
    <div id="successModal" class="modal">
        <div class="modal-content">
            <h2>âœ… Loss report submitted successfully!</h2>
            <button onclick="closeModal()">Close</button>
        </div>
    </div>

    <script>
        function closeModal() {
            document.getElementById("successModal").style.display = "none";
            window.history.replaceState(null, null, window.location.pathname); // remove query params
        }

        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("success") === "true") {
            document.getElementById("successModal").style.display = "flex";
        }
    </script>
</body>
</html>
