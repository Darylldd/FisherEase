          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <div class="main-container">
    <!-- User Dashboard Section -->
    <div class="section-header">
      <i class="fas fa-tachometer-alt"></i> User Dashboard
    </div>
    <div class="dashboard-content">
      <h2>User Dashboard</h2>
      <p>View and manage your registered information.</p>
      <p>You have caught a total of: <strong><%= userCatches %></strong> fish.</p>
      
      <% if (userCatches === 0) { %>
        <p>It looks like you're new! Start catching fish to track your records.</p>
      <% } %>
    </div>

    <!-- Weather Forecast Section -->
    <div class="weather-section">
      <div class="section-header">
        <i class="fas fa-cloud-sun"></i> Weather Forecast for Calapan City, Philippines
      </div>
      <div id="weather-carousel" class="weather-carousel carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner" id="forecast-cards"></div>
        <button class="carousel-control-prev" type="button" data-bs-target="#weather-carousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#weather-carousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <div class="carousel-indicators" id="carousel-indicators"></div>
      </div>
    </div>

    <!-- Tide Forecast Section -->
    <div class="tide-section">
      <div class="section-header">
        <i class="fas fa-water"></i> Tide Forecast for Calapan City, Philippines
      </div>
      <div id="tide-carousel" class="tide-carousel carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner" id="tide-cards"></div>
        <button class="carousel-control-prev" type="button" data-bs-target="#tide-carousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#tide-carousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <div class="carousel-indicators" id="tide-indicators"></div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Weather Forecast
      const weatherLat = '13.4139';
      const weatherLon = '121.0561';
      const weatherUrl = `https://api.open-meteo.com/v1/forecast?latitude=${weatherLat}&longitude=${weatherLon}&daily=temperature_2m_max,temperature_2m_min,weathercode&timezone=auto`;

      fetch(weatherUrl)
        .then(response => response.json())
        .then(data => {
          const forecastCards = document.getElementById('forecast-cards');
          const indicators = document.getElementById('carousel-indicators');
          const times = data.daily.time;
          const maxTemps = data.daily.temperature_2m_max;
          const minTemps = data.daily.temperature_2m_min;
          const weatherCodes = data.daily.weathercode;

          times.forEach((time, index) => {
            const date = new Date(time);
            const dayName = date.toLocaleDateString(undefined, { weekday: 'long' });
            const maxTemp = maxTemps[index];
            const minTemp = minTemps[index];
            const weatherCode = weatherCodes[index];
            const weatherDescription = getWeatherDescription(weatherCode);
            const weatherIcon = getWeatherIcon(weatherCode);

            const card = document.createElement('div');
            card.className = `carousel-item ${index === 0 ? 'active' : ''}`;
            card.innerHTML = `
              <div class="weather-card">
                <div class="weather-icon">${weatherIcon}</div>
                <h5 class="card-title">${dayName}</h5>
                <p class="card-text">Max: ${maxTemp}¬∞C</p>
                <p class="card-text">Min: ${minTemp}¬∞C</p>
                <p class="card-text">Weather: ${weatherDescription}</p>
              </div>
            `;
            forecastCards.appendChild(card);

            const indicator = document.createElement('button');
            indicator.type = 'button';
            indicator.setAttribute('data-bs-target', '#weather-carousel');
            indicator.setAttribute('data-bs-slide-to', index);
            if (index === 0) indicator.className = 'active';
            indicator.setAttribute('aria-label', `Slide ${index + 1}`);
            indicators.appendChild(indicator);
          });

          // Initialize weather carousel
          const weatherCarousel = new bootstrap.Carousel(document.getElementById('weather-carousel'), {
            interval: 5000,
            wrap: true
          });

          // Make the carousel visible after loading
          forecastCards.style.opacity = 1;
        })
        .catch(error => {
          console.error('Error fetching weather data:', error);
          document.getElementById('forecast-cards').innerHTML = "<p class='text-danger'>Failed to load weather forecast.</p>";
        });

      // Tide Forecast
      const tideLat = '13.4139';
      const tideLon = '121.0561';
      const apiKey = 'c740ad90-683b-4777-83c9-7092b6cd1858'; // Replace with your WorldTides API key
      const tideUrl = `https://www.worldtides.info/api/v3?extremes&lat=${tideLat}&lon=${tideLon}&key=${apiKey}&days=7`;

      fetch(tideUrl)
        .then(response => response.json())
        .then(data => {
          const tideCards = document.getElementById('tide-cards');
          const tideIndicators = document.getElementById('tide-indicators');

          if (!data.extremes || data.extremes.length === 0) {
            tideCards.innerHTML = "<p class='text-danger'>No tide data available.</p>";
            return;
          }

          // Group tides by day
          const tidesByDay = {};
          data.extremes.forEach(tide => {
            const date = new Date(tide.date);
            const dayKey = date.toLocaleDateString(undefined, { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
            if (!tidesByDay[dayKey]) {
              tidesByDay[dayKey] = [];
            }
            tidesByDay[dayKey].push(tide);
          });

          // Create carousel items
          Object.keys(tidesByDay).forEach((day, index) => {
            const tides = tidesByDay[day];
            const card = document.createElement('div');
            card.className = `carousel-item ${index === 0 ? 'active' : ''}`;
            let tideHtml = `
              <div class="tide-card">
                <div class="tide-icon">üåä</div>
                <h5 class="card-title">${day}</h5>
            `;
            tides.forEach(tide => {
              const time = new Date(tide.date).toLocaleTimeString(undefined, { hour: '2-digit', minute: '2-digit' });
              tideHtml += `
                <p class="card-text">${tide.type}: ${time}, ${tide.height.toFixed(2)} m</p>
              `;
            });
            tideHtml += `</div>`;
            card.innerHTML = tideHtml;
            tideCards.appendChild(card);

            const indicator = document.createElement('button');
            indicator.type = 'button';
            indicator.setAttribute('data-bs-target', '#tide-carousel');
            indicator.setAttribute('data-bs-slide-to', index);
            if (index === 0) indicator.className = 'active';
            indicator.setAttribute('aria-label', `Slide ${index + 1}`);
            tideIndicators.appendChild(indicator);
          });

          // Initialize tide carousel
          const tideCarousel = new bootstrap.Carousel(document.getElementById('tide-carousel'), {
            interval: 5000,
            wrap: true
          });

          // Make the carousel visible after loading
          tideCards.style.opacity = 1;
        })
        .catch(error => {
          console.error('Error fetching tide data:', error);
          document.getElementById('tide-cards').innerHTML = "<p class='text-danger'>Failed to load tide forecast.</p>";
        });

      function getWeatherDescription(code) {
        const weatherMapping = {
          0: 'Clear sky', 1: 'Mainly clear', 2: 'Partly cloudy', 3: 'Overcast',
          45: 'Fog', 48: 'Depositing rime fog', 51: 'Light drizzle', 53: 'Moderate drizzle',
          55: 'Dense drizzle', 56: 'Light freezing drizzle', 57: 'Dense freezing drizzle',
          61: 'Slight rain', 63: 'Moderate rain', 65: 'Heavy rain', 66: 'Light freezing rain',
          67: 'Heavy freezing rain', 71: 'Slight snowfall', 73: 'Moderate snowfall',
          75: 'Heavy snowfall', 77: 'Snow grains', 80: 'Slight rain showers',
          81: 'Moderate rain showers', 82: 'Violent rain showers', 85: 'Slight snow showers',
          86: 'Heavy snow showers', 95: 'Thunderstorm', 96: 'Thunderstorm with slight hail',
          99: 'Thunderstorm with heavy hail'
        };
        return weatherMapping[code] || 'Unknown';
      }

      function getWeatherIcon(code) {
        const iconMapping = {
          0: 'üåû', 1: 'üå§', 2: 'üå•', 3: '‚òÅÔ∏è', 45: 'üå´', 48: 'üå´', 51: 'üåß',
          53: 'üåß', 55: 'üåß', 56: 'üå®', 57: 'üå®', 61: 'üå¶', 63: 'üå¶', 65: 'üåß',
          66: 'üå®', 67: 'üå®', 71: '‚ùÑÔ∏è', 73: '‚ùÑÔ∏è', 75: '‚ùÑÔ∏è', 77: '‚ùÑÔ∏è',
          80: 'üåß', 81: 'üåß', 82: 'üåß', 85: '‚ùÑÔ∏è', 86: '‚ùÑÔ∏è', 95: 'üå©', 96: 'üå©', 99: 'üå©'
        };
        return iconMapping[code] || '‚ùì';
      }
    });
  </script>
</body>
</html>