<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">FMO User</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Dashboard</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReports" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            User Tools
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownReports">
                            <li><a class="dropdown-item" href="/climateLoss/view">Post-Climate Event Loss Reporting</a></li>
                            <li><a class="dropdown-item" href="/catch-report/predictions">Predict Best Catch Time</a></li>
                            <li><a class="dropdown-item" href="/catch-report">Report Daily Catch</a></li>
                            <li><a class="dropdown-item" href="/fishing-activity-tracking">Log Fishing Activity</a></li>
                            <li><a class="dropdown-item" href="/harvest/user-view">Harvest</a></li>
                            <li><a class="dropdown-item" href="/harvest/add">Add Harvest</a></li>
                            <li>
                              <a class="dropdown-item" href="/violation-history">My Violations</a>
                            </li>
                            
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Welcome, <%= user.name %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="/auth/logout" class="btn btn-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h2>User Dashboard</h2>
        <p>View and manage your registered information.</p>
        <p>You have caught a total of: <strong><%= userCatches %></strong> fish.</p>
        
        <% if (userCatches === 0) { %>
            <p>It looks like you're new! Start catching fish to track your records.</p>
        <% } %>

        <h4>ðŸŒ¦ Weather Today in Calapan City</h4>
        <div id="weatherInfo">Loading...</div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
          const url = "https://api.open-meteo.com/v1/forecast?latitude=13.4139&longitude=121.0561&daily=temperature_2m_max,temperature_2m_min,precipitation_sum,windspeed_10m_max,winddirection_10m_dominant&timezone=auto";
      
          fetch(url)
            .then(res => res.json())
            .then(data => {
              const daily = data.daily;
              const todayIndex = 0;
              const forecast = `
                <ul class="list-group mt-3">
                  <li class="list-group-item"><strong>Max Temp:</strong> ${daily.temperature_2m_max[todayIndex]}Â°C</li>
                  <li class="list-group-item"><strong>Min Temp:</strong> ${daily.temperature_2m_min[todayIndex]}Â°C</li>
                  <li class="list-group-item"><strong>Rain:</strong> ${daily.precipitation_sum[todayIndex]} mm</li>
                  <li class="list-group-item"><strong>Wind:</strong> ${daily.windspeed_10m_max[todayIndex]} km/h from ${getDirection(daily.winddirection_10m_dominant[todayIndex])}</li>
                </ul>
              `;
              document.getElementById("weatherInfo").innerHTML = forecast;
            })
            .catch(err => {
              document.getElementById("weatherInfo").innerHTML = "<p class='text-danger'>Failed to load weather.</p>";
              console.error(err);
            });
      
          function getDirection(degrees) {
            const directions = ['N', 'NE', 'E', 'SE', 'S', 'SW', 'W', 'NW'];
            return directions[Math.round(degrees / 45) % 8];
          }
        });
      </script>
      
</body>
</html>