  <table class="table table-striped table-bordered" id="lossReportsTable">
    <thead class="table-dark">
      <tr>
        <th>User</th>
        <th>Event Type</th>
        <th>Date</th>
        <th>Species Lost</th>
        <th>Loss (Kg)</th>
        <th>Loss Value</th>
        <th>Location</th>
        <th>Description</th>
        <th>Proof Image</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="lossReportsBody">
      <% if (lossReports && lossReports.length > 0) { %>
        <% lossReports.forEach(report => { %>
          <tr>
            <td><%= report.user_name || 'Unknown' %></td>
            <td><%= report.event_type %></td>
            <td><%= new Date(report.date).toLocaleDateString() %></td>
            <td><%= report.species_lost %></td>
            <td><%= report.estimated_loss_kg %></td>
            <td><%= report.estimated_loss_value %></td>
            <td><%= report.location %></td>
            <td><%= report.description %></td>
            <td>
              <% if (report.image_path) { %>
                <img src="<%= report.image_path %>" alt="Proof Image" data-bs-toggle="modal" data-bs-target="#imagePreviewModal" onclick="showImage('<%= report.image_path %>')">
              <% } else { %>
                No Image
              <% } %>
            </td>
            <td class="status-<%= report.status.toLowerCase() %>"><%= report.status %></td>
            <td>
              <% if (report.status === 'Pending') { %>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-cog"></i> Actions
                  </button>
                  <ul class="dropdown-menu p-2">
                    <li>
                      <form action="/climateLoss/admin/approve/<%= report.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm w-100 mb-1">
                          <i class="fas fa-check"></i> Approve
                        </button>
                      </form>
                    </li>
                    <li>
                      <form action="/climateLoss/admin/disapprove/<%= report.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm w-100">
                          <i class="fas fa-times"></i> Disapprove
                        </button>
                      </form>
                    </li>
                  </ul>
                </div>
              <% } else { %>
                -
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="11" class="text-center">No loss reports found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <!-- Pagination Controls -->
<nav aria-label="Loss Reports table pagination">
  <ul class="pagination justify-content-center" id="paginationControls">
    <li class="page-item" id="prevPage">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">« Previous</span>
      </a>
    </li>
    <!-- Page numbers will be inserted here -->
    <li class="page-item" id="nextPage">
