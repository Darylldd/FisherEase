<!DOCTYPE html>
<html lang="en">
<head>
    <title>Generate Catch Report</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="#">FMO Admin</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/admin">Dashboard</a>
              </li>
              <!-- Registration Dropdown -->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownRegister" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Register
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownRegister">
                  <li><a class="dropdown-item" href="/register/fisherfolk">Fisherfolk Registration</a></li>
                  <li><a class="dropdown-item" href="/aquaculture/register">Aquaculture Facility Registration</a></li>
                  <li><a class="dropdown-item" href="/logs">Audit Logs & Activity Tracking</a></li>
                </ul>
              </li>
    
              <!-- Reports & Tracking Dropdown -->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReports" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Reports & Tracking
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownReports">
                  <li><a class="dropdown-item" href="/catch-report/review">Catch Report Review Page</a></li>
                  <li><a class="dropdown-item" href="/fishing-activity-tracking">Fishing Activity Tracking</a></li>
                  <li><a class="dropdown-item" href="/enforcement-compliance-logging">Enforcement and Compliance Logging</a></li>
                  <li><a class="dropdown-item" href="/violation-notification-system">Violation Notification System</a></li>
                </ul>
              </li>
              <!-- Tools Dropdown -->
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownTools" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Tools
      </a>
      <ul class="dropdown-menu" aria-labelledby="navbarDropdownTools">
        <li><a class="dropdown-item" href="/catch-report/admin/report">Generate Catch Report</a></li>
        <li><a class="dropdown-item" href="#">Data Tools</a></li>
        <li><a class="dropdown-item" href="#">Gov Reports</a></li>
      </ul>
    </li>
    
              <li class="nav-item">
                <a class="nav-link" href="#">Welcome, <%= user.name %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="/auth/logout" class="btn btn-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h2>Generate Catch Report</h2>
        <form action="/catch-report/admin/generate-report" method="GET" class="mb-4">
            <div class="mb-3">
                <label class="form-label">Start Date:</label>
                <input type="date" name="startDate" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">End Date:</label>
                <input type="date" name="endDate" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Species:</label>
                <select name="species" class="form-select">
                    <option value="">All Species</option>
                    <% speciesList.forEach(species => { %>
                        <option value="<%= species %>"><%= species %></option>
                    <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Location:</label>
                <select name="location" class="form-select">
                    <option value="">All Locations</option>
                    <% locationList.forEach(location => { %>
                        <option value="<%= location %>"><%= location %></option>
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Generate Report</button>
        </form>

        <% if (reportGenerated) { %>
            <a href="/catch-report/admin/download-report" class="btn btn-warning">
                Download PDF
            </a>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>